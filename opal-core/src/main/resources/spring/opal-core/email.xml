<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
    <property name="host"><value>${org.obiba.opal.mailsender.host}</value></property>
    <property name="port"><value>${org.obiba.opal.mailsender.port}</value></property>
    <property name="username"><value>${org.obiba.opal.mailsender.username}</value></property>
    <property name="password"><value>${org.obiba.opal.mailsender.password}</value></property>
    <property name="javaMailProperties">
      <props>
          <!-- Use SMTP-AUTH to authenticate to SMTP server -->
          <prop key="mail.smtp.auth">true</prop>
          <!-- Use TLS to encrypt communication with SMTP server -->
          <prop key="mail.smtp.starttls.enable">true</prop>
      </props>
    </property>
  </bean>

  <bean id="velocityEngine" class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
    <property name="velocityProperties">
      <value>
        resource.loader=class
        class.resource.loader.class=org.apache.velocity.runtime.resource.loader.ClasspathResourceLoader
      </value>
    </property>
  </bean>

</beans>