<beans xmlns="http://www.springframework.org/schema/beans" xmlns:batch="http://www.springframework.org/schema/batch"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
           http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/batch 
           http://www.springframework.org/schema/batch/spring-batch-2.0.xsd">

  <bean id="repository" class="org.obiba.opal.sesame.repository.spring.RepositoryBean">
    <property name="delegate">
      <bean class="org.obiba.opal.sesame.repository.impl.NativeRepositoryFactory">
        <property name="dataDir" value="/media/truecrypt1/2009.06/medium-opal-data" />
        <property name="tripleIndexes" value="spoc,posc,cosp" />
        <property name="withInferencer" value="false" />
      </bean>
    </property>
  </bean>

  <bean id="transactionManager" class="org.springframework.batch.support.transaction.ResourcelessTransactionManager" />

  <bean id="jobRepository" class="org.springframework.batch.core.repository.support.MapJobRepositoryFactoryBean">
    <property name="transactionManager" ref="transactionManager" />
  </bean>

  <bean class="org.springframework.batch.core.launch.support.SimpleJobLauncher">
    <property name="jobRepository" ref="jobRepository" />
  </bean>

  <batch:job id="ioSampleJob" restartable="false">
    <batch:step id="step1">
      <batch:tasklet>
        <batch:chunk reader="aggregatingReader" writer="fileItemWriter" commit-interval="1" />
      </batch:tasklet>
    </batch:step>
  </batch:job>

  <bean id="aggregatingReader" class="org.obiba.opal.mart.reader.AggregatingQueryResultReader" scope="step">
    <property name="itemReader" ref="itemReader" />
    <property name="aggregator">
      <!-- <bean class="org.obiba.opal.mart.aggregate.EntityIdAggregatingQueryResultItemProcessor" /> -->
      <!--
        
        <bean class="org.obiba.opal.mart.aggregate.VariableValueFrequencyQueryResultAggregator">
        <property name="aggregatedVariableName" value="CURRENT_OCCUPATION" />
        </bean>
      -->
      <bean class="org.obiba.opal.mart.aggregate.CrossVariableValueFrequencyQueryResultAggregator">
        <property name="crossedVariables">
          <set>
            <value>SEX</value>
          </set>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="itemReader" class="org.obiba.opal.mart.reader.sesame.SesameRepositoryReader" scope="step">
    <property name="repository" ref="repository" />
    <property name="bindingSetMapper">
      <bean class="org.obiba.opal.mart.reader.sesame.QueryResultBindingSetMapper">
        <property name="manager">
          <bean class="org.obiba.opal.elmo.SesameManagerFactoryBean">
            <property name="repository" ref="repository" />
          </bean>
        </property>
      </bean>
    </property>
    <property name="query">
        <value>
        <![CDATA[PREFIX opal:<http://www.obiba.org/owl/2009/05/opal#> 
        PREFIX rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>
        PREFIX rdfs:<http://www.w3.org/2000/01/rdf-schema#>
        SELECT ?sid ?var ?value 
        {
        _:entity a <http://www.obiba.org/owl/2009/05/onyx/ohs/HealthQuestionnaireTouchScreen#CURRENT_OCCUPATION> .
        _:entity opal:hasCategory [ a [ opal:className ?sid ] ] . 
        _:entity opal:withinDataset _:ds . 
        ?varData opal:withinDataset _:ds . 
        ?varData rdf:type ?var . 
        ?var rdfs:subClassOf opal:CategoricalVariable .
        OPTIONAL { {?varData opal:dataValue ?value} UNION {?varData opal:hasCategory [ rdf:type [ opal:className ?value ] ] } UNION {?varData rdf:type [ opal:code ?value ]}}
        } ORDER BY ?sid]]>
        </value> 
      <!-- 

      <value>
        <![CDATA[
PREFIX opal:<http://www.obiba.org/owl/2009/05/opal#> 
PREFIX rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#> 
PREFIX rdfs:<http://www.w3.org/2000/01/rdf-schema#> 
