_:entity rdf:type opal:Participant . 
_:ds opal:isForEntity _:entity . 
?varData opal:withinDataset _:ds . 
?varData rdf:type ?var . 
?varData opal:hasCategory [ rdf:type [ opal:code ?value] ] . 
?var opal:dataEntryForm <http://www.obiba.org/owl/2009/05/onyx/ohs/HealthQuestionnaireTouchScreen#HealthQuestionnaireTouchScreen>
} ORDER BY ?sid]]>
      </value>
-->
      <!--
        <value> <![CDATA[PREFIX opal:<http://www.obiba.org/owl/2009/05/opal#> PREFIX rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#> PREFIX
        rdfs:<http://www.w3.org/2000/01/rdf-schema#> SELECT ?sid ?occ ?var ?value { _:entity opal:identifier ?sid . _:entity rdf:type opal:Participant . _:ds
        opal:isForEntity _:entity . ?varData opal:withinDataset _:ds . ?varData rdf:type ?var . ?varData opal:dataValue ?value } ORDER BY ?sid]]> </value>
      -->
    </property>
  </bean>

  <bean id="loggingItemWriter" class="org.obiba.opal.mart.writer.support.LoggingItemWriter" />

  <bean id="fileItemWriter" class="org.springframework.batch.item.file.FlatFileItemWriter" scope="step">
    <property name="resource" value="#{jobParameters[output.filename]}" />
    <property name="lineAggregator">
      <bean class="org.obiba.opal.mart.writer.support.AggregateQueryResultLineAggregator" />
    </property>
  </bean>
  <bean id="chartWriter" class="org.obiba.opal.mart.writer.support.GoogleChartItemWriter"></bean>
</beans>
