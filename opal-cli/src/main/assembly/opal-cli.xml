<assembly>
  <id>opal-cli</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/main/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>*.*</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <!-- Copy dependency jar files to 'lib' -->
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>*:jar:*</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>