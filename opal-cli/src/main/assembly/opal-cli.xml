<assembly>
  <id>opal-cli</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/main/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>*.bat</include>
      </includes>
    </fileSet>

    <!-- Copy unix shell scripts. -->
    <fileSet>
      <directory>src/main/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0755</fileMode>
      <excludes>
        <exclude>*.bat</exclude>
      </excludes>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>src/main/conf</directory>
      <outputDirectory>conf</outputDirectory>
      <includes>
        <include>**/*.*</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <!-- Copy dependency jar files to 'lib' -->
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
</assembly>