#!/bin/sh

echo "JAVA_HOME=$JAVA_HOME"
echo "OPAL_HOME=$OPAL_HOME"

if [ -z "$JAVA_HOME" ]
then
  echo "JAVA_HOME not set."
  exit 1;
fi

if [ -z "$OPAL_HOME" ]
then
  echo "OPAL_HOME not set."
  exit 2;
fi

. $OPAL_HOME/bin/setclasspath

java -cp "$CLASSPATH" org.obiba.opal.cli.client.impl.OpalKeyClient $@
