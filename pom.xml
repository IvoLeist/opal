		    <artifactId>jacorb</artifactId>
		  </exclusion>
		  <exclusion>
		    <groupId>org.jacorb</groupId>
		    <artifactId>jacorb-idl</artifactId>
		  </exclusion>
		  <exclusion>
		    <groupId>commons-logging</groupId>
		    <artifactId>commons-logging</artifactId>
		  </exclusion>
        </exclusions>
      </dependency>
	  
	  <!-- JOTM requires the Java Spec APIs; these are missing due to the exclusions declared above for the JOTM dependency. -->
	  <dependency>
        <groupId>org.ow2.spec.ee</groupId>
        <artifactId>ow2-connector-1.5-spec</artifactId>
        <version>${java.spec.version}</version>
      </dependency>
      <dependency>
        <groupId>org.ow2.spec.ee</groupId>
        <artifactId>ow2-jta-1.1-spec</artifactId>
