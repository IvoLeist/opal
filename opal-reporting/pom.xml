<?xml version="1.0" encoding="ISO-8859-1"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>opal</artifactId>
    <groupId>org.obiba.opal</groupId>
    <version>1.4-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <groupId>org.obiba.opal</groupId>
  <artifactId>opal-reporting</artifactId>
  <version>1.4-SNAPSHOT</version>

  <name>opal-reporting</name>
  <description>Opal Reporting Module</description>

  <dependencies>
    <dependency>
      <groupId>org.obiba.opal</groupId>
      <artifactId>opal-core</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.obiba.opal</groupId>
      <artifactId>opal-ws</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.obiba.opal</groupId>
      <artifactId>opal-web-model</artifactId>
      <version>${project.version}</version>
    </dependency>
    
    <!-- BIRT dependencies -->
    
    <dependency>
      <groupId>org.eclipse.birt</groupId>
      <artifactId>coreapi</artifactId>
      <version>${birt.version}</version>
      <scope>system</scope>
      <systemPath>${birt.lib}/coreapi.jar</systemPath>
    </dependency>
    
    <dependency>
      <groupId>org.eclipse.birt</groupId>
      <artifactId>modelapi</artifactId>
      <version>${birt.version}</version>
      <scope>system</scope>
      <systemPath>${birt.lib}/modelapi.jar</systemPath>
    </dependency>
    
    <dependency>
      <groupId>org.eclipse.birt</groupId>
      <artifactId>engineapi</artifactId>
      <version>${birt.version}</version>
      <scope>system</scope>
      <systemPath>${birt.lib}/engineapi.jar</systemPath>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
  </build>

  <properties>
    <pmd.ruleset.dir>${basedir}/..</pmd.ruleset.dir>
    <birt.version>2.6.1</birt.version>
    <birt.lib>${basedir}/lib/birt-runtime-2_6_1/ReportEngine/lib</birt.lib>
  </properties>
  
</project>
