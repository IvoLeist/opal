<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!--
    A FactoryBean that returns a (non-singleton) chain of strategies, for reading Onyx data. Note: The "chainedStrategies" property is an ordered list of
    strategies included in the chain (each list item is a reference to the strategy's bean, a prototype).
  -->
  <bean id="onyxDataInputStrategy" class="org.obiba.opal.datasource.onyx.OnyxDataInputStrategyFactoryBean">
    <property name="chainedStrategies" value="${org.obiba.onyx.dataInputStrategies}" />
  </bean>

  <bean id="decrypt" class="org.obiba.opal.datasource.onyx.DecryptingOnyxDataInputStrategy" scope="prototype">
    <property name="keyProvider" ref="opalKeyProvider" />
  </bean>

  <bean id="zip" class="org.obiba.opal.datasource.onyx.ZipOnyxDataInputStrategy" scope="prototype" />

  <bean id="file" class="org.obiba.opal.datasource.onyx.FileOnyxDataInputStrategy" scope="prototype" />

</beans>