<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>opal</artifactId>
    <groupId>org.obiba.opal</groupId>
    <version>1.2-SNAPSHOT</version>
  </parent>

  <artifactId>opal-web-model</artifactId>
  <packaging>jar</packaging>

  <name>opal-web-model</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
    <maven.compiler.source>1.6</maven.compiler.source>
    <maven.compiler.target>1.6</maven.compiler.target>
    <gwt.version>2.0.3</gwt.version>
    <protobuf.version>2.3.0</protobuf.version>
    <protostuff.version>1.0-r782</protostuff.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-user</artifactId>
      <version>${gwt.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.google.protobuf</groupId>
      <artifactId>protobuf-java</artifactId>
      <version>${protobuf.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.protobuf</groupId>
      <artifactId>protobuf-java-format</artifactId>
      <version>1.1</version>
    </dependency>
    <dependency>
      <groupId>com.dyuproject.protostuff</groupId>
      <artifactId>protostuff-core</artifactId>
      <version>${protostuff.version}</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.7</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.*</include>
        </includes>
      </resource>
      <!-- Creating a GWT module requires that the .java files be in the JAR file. -->
      <resource>
        <directory>target/generated-sources/protobuf-server</directory>
        <includes>
          <include>**/*.java</include>
        </includes>
      </resource>
      <resource>
        <directory>target/generated-sources/protobuf-gwt</directory>
        <includes>
          <include>**/*.java</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.5</version>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <!-- This will add these directories to the build path -->
                <source>target/generated-sources/protobuf-server</source>
                <source>target/generated-sources/protobuf-gwt</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-sources</id>
            <phase>generate-sources</phase>
            <configuration>
              <tasks>
                <!-- Determine which protoc binary we can use -->
                <condition property="os.protoc" value="${protobuf.version}-linux-x86_64">
                  <or>
                    <os name="linux" arch="amd64" />
                    <os name="linux" arch="x86_64" />
                  </or>
                </condition>
                <condition property="os.protoc" value="${protobuf.version}-win32">
                  <os family="windows" />
                </condition>

                <fail message="No protoc binary for your OS: ${os.name} ${os.arch}." unless="os.protoc" />

                <mkdir dir="target/generated-sources/protobuf-server" />
                <!-- Compile our .proto file -->
                <exec executable="${basedir}/tools/protoc-${os.protoc}" failonerror="true">
                  <arg value="--java_out=target/generated-sources/protobuf-server" />
                  <arg value="src/main/protobuf/Magma.proto" />
                </exec>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <!-- This will compile the .proto file and produce JavaScriptOverlay classes usable by a GWT client -->
      <plugin>
        <groupId>com.dyuproject.protostuff</groupId>
        <artifactId>protostuff-maven-plugin</artifactId>
        <version>${protostuff.version}</version>
        <configuration>
          <protoModules>
            <protoModule>
              <source>src/main/protobuf/Magma.proto</source>
              <output>gwt_overlay</output>
              <outputDir>target/generated-sources/protobuf-gwt</outputDir>
              <options>
                <property>
                  <!-- Override the package name -->
                  <name>org.obiba.opal.web.model</name>
                  <value>org.obiba.opal.web.model.client</value>
                </property>
              </options>
            </protoModule>
          </protoModules>
        </configuration>
        <executions>
          <execution>
            <id>generate-sources</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>compile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>
  <repositories>
    <repository>
      <id>obiba</id>
      <url>http://maven.obiba.org/maven2</url>
    </repository>
    <repository>
      <id>protobuf-java-format</id>
      <url>http://protobuf-java-format.googlecode.com/svn/trunk/repo/</url>
    </repository>
    <repository>
      <id>protostuff-repo</id>
      <name>protostuff-repo</name>
      <url>http://protostuff.googlecode.com/svn/repos/maven2</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>obiba</id>
      <url>http://maven.obiba.org/maven2</url>
    </pluginRepository>
  </pluginRepositories>
</project>
