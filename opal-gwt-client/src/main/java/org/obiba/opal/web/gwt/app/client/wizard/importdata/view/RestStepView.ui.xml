<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">
  <g:FlowPanel>

    <g:HTMLPanel ui:field="help">
      <g:Label addStyleNames="title">
        <ui:msg description="Opal URL label">Opal URL</ui:msg>
      </g:Label>
      <p>
        <ui:msg description="Opal URL information">The Opal url (starts with http or https)</ui:msg>
      </p>
    </g:HTMLPanel>

    <g:FlowPanel styleName="input">
      <g:Label addStyleNames="key">
        <ui:msg description="Opal URL label">Opal address</ui:msg>
      </g:Label>
      <g:TextBox ui:field="url"></g:TextBox>
      <g:Label
          styleName="help-block">
        <ui:msg description="Opal URL Description label">Opal address starts with
          http:// or https://
        </ui:msg>
      </g:Label>
    </g:FlowPanel>

    <g:FlowPanel styleName="input">
      <g:Label addStyleNames="key">
        <ui:msg description="Username label">User</ui:msg>
      </g:Label>
      <g:TextBox ui:field="username"></g:TextBox>
      <g:Label
          styleName="help-block">
        <ui:msg description="Username Description label">Name of the user valid for the
          remote Opal.
        </ui:msg>
      </g:Label>
    </g:FlowPanel>

    <g:FlowPanel styleName="input">
      <g:Label addStyleNames="key">
        <ui:msg description="Password label">Password</ui:msg>
      </g:Label>
      <g:PasswordTextBox ui:field="password"></g:PasswordTextBox>
    </g:FlowPanel>

    <g:FlowPanel styleName="input">
      <g:Label addStyleNames="key">
        <ui:msg description="Remote Datasource label">Remote datasource</ui:msg>
      </g:Label>
      <g:TextBox ui:field="remoteDatasource"></g:TextBox>
      <g:Label
          styleName="help-block">
        <ui:msg description="Remote Datasource Description label">Name of the datasource from which data will
          be imported.</ui:msg>
      </g:Label>
    </g:FlowPanel>

  </g:FlowPanel>
</ui:UiBinder>