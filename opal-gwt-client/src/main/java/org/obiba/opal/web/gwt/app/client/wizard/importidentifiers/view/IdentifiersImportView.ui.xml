<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui" 
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  xmlns:w="urn:import:org.obiba.opal.web.gwt.app.client.widgets.view"
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <o:WizardDialogBox ui:field="dialog" autoHide="false" modal="true" height="30em" width="40em">
    <g:caption>
      <ui:msg description="Import Unit Identifiers label">Import Identifiers</ui:msg>
    </g:caption>
       
    <g:FlowPanel>
      <o:WizardStep ui:field="formatSelectionStep">
        <g:HTMLPanel>
          <table cellspacing="10">
            <tbody>    
              <tr>
                <td>
                  <ui:msg description="Format label">Format</ui:msg>:          
                </td>
                <td>
                  <g:ListBox ui:field='formatListBox' visibleItemCount='1'/>
                </td>
              </tr>
            </tbody>
          </table>
        </g:HTMLPanel>
      </o:WizardStep>
      
      <o:WizardStep ui:field="formatStep">
        <g:FlowPanel>
          <g:HTMLPanel ui:field="xmlOptions">
            <table cellspacing="10" class="full-width">
              <tbody>           
                <tr>
                  <td>
                    <ui:msg description="File label">File</ui:msg>:
                  </td>
                  <td>
                    <g:SimplePanel ui:field="selectFilePanel" />
                  </td>
                </tr>
              </tbody>
            </table>
          </g:HTMLPanel>
          <w:CsvOptionsView ui:field="csvOptions" />
        </g:FlowPanel>
      </o:WizardStep>
      
      <o:WizardStep ui:field="conclusionStep">
        <g:SimplePanel ui:field="conclusionPanel" />
      </o:WizardStep>
      
    </g:FlowPanel>
    
    
  </o:WizardDialogBox>
  
</ui:UiBinder>