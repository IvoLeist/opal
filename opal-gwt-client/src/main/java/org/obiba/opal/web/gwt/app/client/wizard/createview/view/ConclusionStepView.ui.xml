<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client"
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <ui:style>
    .label {
      margin-left: 1em;
      margin-top: 1em;
    }
  </ui:style>
  
  <o:WorkbenchLayout withInfo="false">
    <g:Label><ui:msg description="Create View title">Create View</ui:msg></g:Label>
    <g:Label><ui:msg description="Create View summary">The view is in the process of being created.</ui:msg></g:Label>
    <g:SimplePanel />
    
    <g:FlowPanel>
      <g:Label ui:field="processingViewLabel" addStyleNames="{style.label}"><ui:msg description="Processing view label">Processing view:</ui:msg></g:Label>
      <g:FlowPanel ui:field="resourceRequestPanel" />
      <g:Label addStyleNames="{style.label}"><ui:msg description="Continue view configuration label">You may now continue view configuration:</ui:msg></g:Label>
      <g:Button ui:field="configureViewButton" addStyleNames="{style.label}"><ui:msg description="Configure View button label">Configure View</ui:msg></g:Button>
    </g:FlowPanel> 
  </o:WorkbenchLayout>

</ui:UiBinder>