<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"  
  xmlns:c="urn:import:com.google.gwt.user.cellview.client">

  <ui:style>
    .localizablesTable {
      clear: left;
      width: 100%;
    }

    .localizablesTable td:hover {
      cursor: default;
    }
    .localizablesTable td + td + td span + span {
      margin-left: 1em;	
    }
    .localizablesTable td + td + td span {
      text-decoration: underline;	
    }
    .localizablesTable td + td + td span:hover {
      cursor: pointer;
    }
  </ui:style>
  
  <g:FlowPanel>
    <g:Button ui:field="addButton" styleName="btn left-aligned">Add</g:Button>
    <g:ListBox ui:field="localeListBox" addStyleNames="right-aligned" />
    <c:SimplePager ui:field="pager" location="CENTER" addStyleNames="right-aligned pager" />
    <o:Table ui:field="localizablesTable" addStyleNames="small-top-margin {style.localizablesTable}" />  
  </g:FlowPanel>
  
</ui:UiBinder>
