<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client"
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <g:HTMLPanel addStyleNames="evaluateScriptPanel">
    <table class="full-width">
      <tr>
        <td colspan="2">
          <g:TextArea ui:field="scriptArea" addStyleNames="not-so-full-width"/>
        </td>
      </tr>
      <tr>
        <td>
		  <g:HTMLPanel addStyleNames="paging" visible="false" ui:field="paging">
		    <div class="pagingInfo">
		      <g:Label ui:field="pageItemType"/>
		      <g:Label ui:field="pageLimit"/>
		    </div>
		    <div class="pagingActions">
		      <g:Anchor ui:field="previousPage"><img src="image/16/previous.png" align="middle"/></g:Anchor>
		      <g:Anchor ui:field="nextPage"><img src="image/16/next.png" align="middle"/></g:Anchor>
		    </div>
		  </g:HTMLPanel>
        </td>
        <td align="right">
          <g:Button ui:field="testScript"><ui:msg description="Test button label">Test</ui:msg></g:Button>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <g:DisclosurePanel ui:field="resultsPanel" addStyleNames="resultsPanel not-so-full-width">
            <g:header><ui:msg description="Results label">Results</ui:msg></g:header>
            <g:VerticalPanel ui:field="testResults" width="100%" height="23em"/>
          </g:DisclosurePanel>
        </td>
      </tr>
    </table>
  </g:HTMLPanel>

</ui:UiBinder>