<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui" 
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <g:FlowPanel>
       <g:SimplePanel ui:field="datasourcePanel" />
       <g:Label ui:field="failed" addStyleNames="p"><ui:msg description="Datasource creation failed">Some errors have been detected. You should fix them before creating this datasource:</ui:msg></g:Label>
       <o:DatasourceParsingErrorTable ui:field="datasourceParsingErrorTable" addStyleNames="p full-width"/>
  </g:FlowPanel>
  
</ui:UiBinder>