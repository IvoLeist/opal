<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client"
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">
  
 <g:VerticalPanel width="100%" addStyleNames="navigator">
     <g:FlowPanel addStyleNames="titlebar">
       <g:Label addStyleNames="title" ui:field="datasourceName">opal-data</g:Label>
       <g:Label addStyleNames="small-indent"><ui:msg description="Datasource title in parentheses">(Datasource)</ui:msg></g:Label>
     </g:FlowPanel>
      
     <g:FlowPanel ui:field="toolbarPanel" addStyleNames="toolbar toolbar-left"/>
                                  
     <g:HTMLPanel>
      <table class="item-properties small-indent">
        <tr>
          <td>
            <g:Label addStyleNames="key">
              <ui:msg description="Type label">Type</ui:msg>:
            </g:Label>
          </td>
          <td>
            <g:Label ui:field="datasourceType"/>
          </td>
        </tr>
      </table>
    </g:HTMLPanel>
                        
     <o:HorizontalTabLayout addStyleNames="small-indent top-margin not-so-full-width">
	  <g:Anchor><ui:msg description="Tables label">Tables</ui:msg></g:Anchor>
      <g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
        <g:InlineLabel ui:field="noTables"><ui:msg description="No Tables label">No Tables</ui:msg></g:InlineLabel>
        <o:Table ui:field="table" width="100%" addStyleNames="left-aligned gwt-CellTable tableList"/>
        <g:Image ui:field="loading" url="image/loading.gif" addStyleNames="loading"/>
      </g:VerticalPanel>
    </o:HorizontalTabLayout>
     
  </g:VerticalPanel>
  
</ui:UiBinder>