<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui" 
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
  xmlns:o2="urn:import:org.obiba.opal.web.gwt.app.client.wizard.derive.view"
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">
  
  	<ui:style>
    	.width-height {width:400px;height:400px}
  	</ui:style>
  	
  	<g:FlowPanel> 
	     <o:WizardStep ui:field="deriveStep">
		 	<g:FlowPanel>
		 		<g:HTMLPanel>
		 			<table>
		 			<tr>
		 				<td>
				 			<o2:ValueTypeBox ui:field="valueTypeBox" />
				 		</td>
				 	</tr>
				 	<tr>
		 				<td>
							<g:Button ui:field="test" styleName="btn"><ui:msg description="Test label">Test</ui:msg></g:Button>
						</td>
				 	</tr>
					<tr>
		 				<td>
							<g:TextArea ui:field="scriptArea" addStyleNames="{style.width-height}"/>
						</td>
				 	</tr>
					</table>
				</g:HTMLPanel>
			</g:FlowPanel>
	     </o:WizardStep>
    </g:FlowPanel>
    
</ui:UiBinder>