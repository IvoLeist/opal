<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <b:FluidRow addStyleNames="no-bottom-margin">
      <b:Column size="3">
        <b:DropdownButton text="Add Table" type="INFO" icon="PLUS">
          <b:NavLink icon="QUESTION_SIGN" ui:field="createKeyPair">
            <ui:msg description="Create Key Pair label">Create Key Pair...</ui:msg>
          </b:NavLink>
          <b:NavLink icon="QUESTION_SIGN" ui:field="importKeyPair">
            <ui:msg description="Import Key Pair label">Import Key Pair...</ui:msg>
          </b:NavLink>
          <b:NavLink icon="QUESTION_SIGN" ui:field="importCertificate">
            <ui:msg description="Import Certificate label">Import Certificate...</ui:msg>
          </b:NavLink>
        </b:DropdownButton>
      </b:Column>
      <b:Column size="9">
        <b:SimplePager ui:field="tablePager" location="RIGHT" addStyleNames="pull-right"/>
      </b:Column>
    </b:FluidRow>
    <o:Table ui:field="encryptionKeysTable" addStyleNames="small-top-margin"/>

  </g:FlowPanel>

</ui:UiBinder>