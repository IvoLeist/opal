<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client">

  <ui:style>
    .right-aligned { float: right; margin:10px; }
    .top-margin { margin-top: 0.5em; }
  </ui:style>
    
  <g:DockLayoutPanel unit="EM">
    <g:center>
      <g:ScrollPanel width="100%">
        <o:Table width="100%" ui:field="table" addStyleNames="main"/>
      </g:ScrollPanel>
    </g:center>
    <g:south size="3.25">
      <g:HTMLPanel addStyleNames="footer">
        <span class="{style.right-aligned} {style.top-margin}">
          <g:Button ui:field="close"><ui:msg description="Close label">Close</ui:msg></g:Button>
        </span>
      </g:HTMLPanel>
    </g:south> 
  </g:DockLayoutPanel>
  
</ui:UiBinder>