<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

 <g:VerticalPanel width="100%" addStyleNames="navigator">
     <g:FlowPanel addStyleNames="titlebar">
       <g:Label addStyleNames="title" ui:field="datasourceName">opal-data</g:Label>
       <g:Label addStyleNames="small-indent"><ui:msg description="Datasource title in parentheses">(Datasource)</ui:msg></g:Label>
     </g:FlowPanel>
      
     <g:FlowPanel ui:field="toolbarPanel" addStyleNames="toolbar toolbar-left"/>
           
     <g:FlowPanel addStyleNames="tableList">
       <g:Label ui:field="tablesTableTitle" addStyleNames="small-indent left-aligned title-bold"><ui:msg description="Tables label">Tables</ui:msg></g:Label>
       <g2:CellTable width="100%" ui:field="table" addStyleNames="left-aligned" />
     </g:FlowPanel>
     
     <g:Image ui:field="loading" url="image/loading.gif" addStyleNames="loading"/>
     
  </g:VerticalPanel>
  
</ui:UiBinder>