<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>

    <g:FlowPanel addStyleNames="page-header">
      <b:Breadcrumbs ui:field="breadcrumbs"/>
    </g:FlowPanel>

    <b:Heading size="4">
      <ui:msg description="Users and Groups label">Users and Groups</ui:msg>
    </b:Heading>

    <b:Paragraph>Manage locally defined users and groups.</b:Paragraph>

    <b:DropdownButton text="Add user" icon="PLUS" type="INFO">
      <b:NavLink ui:field="addUser">
        <ui:msg description="Create user label">User with password</ui:msg>
      </b:NavLink>
      <b:NavLink ui:field="addApplication">
        <ui:msg description="Create user with certificate label">User with certificate</ui:msg>
      </b:NavLink>
    </b:DropdownButton>

    <b:Heading size="4">
      <ui:msg description="Users label">Users</ui:msg>
    </b:Heading>
    <b:SimplePager ui:field="usersTablePager" location="RIGHT" addStyleNames="pull-right"/>
    <o:Table ui:field="usersTable" addStyleNames="small-top-margin"/>

    <b:Heading size="4">
      <ui:msg description="Groups label">Groups</ui:msg>
    </b:Heading>
    <b:SimplePager ui:field="groupsTablePager" location="RIGHT" addStyleNames="pull-right"/>
    <o:Table ui:field="groupsTable" addStyleNames="small-top-margin"/>

  </g:FlowPanel>
</ui:UiBinder>