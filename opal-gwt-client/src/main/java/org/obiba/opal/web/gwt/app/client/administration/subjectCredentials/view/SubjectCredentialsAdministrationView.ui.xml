<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>

    <g:FlowPanel addStyleNames="page-header">
      <b:Breadcrumbs ui:field="breadcrumbs"/>
    </g:FlowPanel>

    <b:Heading size="4">
      <ui:msg description="Users, Groups and Applications label">Users, Groups and Applications</ui:msg>
    </b:Heading>

    <b:Paragraph>Manage locally defined users, groups and applications.</b:Paragraph>

    <b:DropdownButton text="Add" icon="PLUS" type="INFO">
      <b:NavLink ui:field="addUser">
        <ui:msg description="Create user label">User</ui:msg>
      </b:NavLink>
      <b:NavLink ui:field="addApplication">
        <ui:msg description="Create application label">Application</ui:msg>
      </b:NavLink>
    </b:DropdownButton>

    <b:Heading size="4">
      <ui:msg description="Users label">Users</ui:msg>
    </b:Heading>
    <b:SimplePager ui:field="usersTablePager" location="RIGHT" addStyleNames="pull-right"/>
    <o:Table ui:field="usersTable" addStyleNames="small-top-margin"/>

    <b:Heading size="4">
      <ui:msg description="Applications label">Applications</ui:msg>
    </b:Heading>
    <b:SimplePager ui:field="applicationsTablePager" location="RIGHT" addStyleNames="pull-right"/>
    <o:Table ui:field="applicationsTable" addStyleNames="small-top-margin"/>

    <b:Heading size="4">
      <ui:msg description="Groups label">Groups</ui:msg>
    </b:Heading>
    <b:SimplePager ui:field="groupsTablePager" location="RIGHT" addStyleNames="pull-right"/>
    <o:Table ui:field="groupsTable" addStyleNames="small-top-margin"/>

  </g:FlowPanel>
</ui:UiBinder>