<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.gen2.table.client">

  <g:DockLayoutPanel unit="EM">
    <g:north size="4">
      <g:LayoutPanel>
        <g:layer top="0" height="2em">
          <g:VerticalPanel width="100%">
            <!--
              Don't know why, but the ALIGN_RIGHT cannot be specified on the Panel itself, it has to be on this specific
              cell...
            -->
            <g:Cell horizontalAlignment="ALIGN_RIGHT">
              <g:HorizontalPanel spacing="10" ui:field="topBar">
                <g:Anchor>Studies</g:Anchor>
                <g:Anchor>Profile</g:Anchor>
                <g:Anchor>Help</g:Anchor>
                <g:Anchor ui:field="quit">Quit</g:Anchor>
              </g:HorizontalPanel>
            </g:Cell>
          </g:VerticalPanel>
        </g:layer>

        <g:layer bottom="0" height="2em">
          <g:MenuBar ui:field="menuBar">
            <g:MenuItem>
              Variables
              <g:MenuBar vertical="true">
                <g:MenuItem ui:field="exploreVariablesItem">Explore</g:MenuItem>
              </g:MenuBar>
            </g:MenuItem>
            <g:MenuItem>
              Data
              <g:MenuBar vertical="true">
                <g:MenuItem ui:field="dataImportItem">Import...</g:MenuItem>
                <g:MenuItem ui:field="dataExportItem">Export...</g:MenuItem>
              </g:MenuBar>
            </g:MenuItem>
            <g:MenuItem>Jobs</g:MenuItem>
            <g:MenuItem>Administration</g:MenuItem>
          </g:MenuBar>

        </g:layer>
      </g:LayoutPanel>
    </g:north>
    <g:center>
      <g:LayoutPanel ui:field="workbench">
        <g:layer top="0" height="100%">
          <g:Label>The Workbench</g:Label>
        </g:layer>
      </g:LayoutPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>