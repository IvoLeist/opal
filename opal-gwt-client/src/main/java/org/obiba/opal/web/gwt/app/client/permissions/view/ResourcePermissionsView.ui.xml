<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">


  <g:FlowPanel>
    <g:FlowPanel>
      <b:ControlGroup>
        <b:Controls>
          <b:Button type="INFO" icon="PLUS" ui:field="addPermission"
              addStyleNames="small-right-indent small-top-margin">
            <ui:msg description="Add Resource Permissions label">Add Permission</ui:msg>
          </b:Button>
          <g:FlowPanel addStyleNames="no-bottom-margin pull-right top-margin">
            <o:Chooser ui:field="displayMode"/>
          </g:FlowPanel>
        </b:Controls>
      </b:ControlGroup>
    </g:FlowPanel>
    <g:FlowPanel ui:field="permissionTablePanel" visible="false">
      <o:Table ui:field="permissionsTable" addStyleNames="small-top-margin"/>
    </g:FlowPanel>

    <g:FlowPanel ui:field="subjectsPermissionTablePanel">
      <o:Table ui:field="subjectsPermissionsTable" addStyleNames="small-top-margin"/>
    </g:FlowPanel>

  </g:FlowPanel>


</ui:UiBinder>