<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .title { font-size: larger; font-weight: bold; }
    .separator { border-bottom: 2px solid black; }
    .applicationTitle { font-weight: bold; font-size: large; }
    .instructions { font-weight: bold; }
    .inset { border: 2px inset black; }
  </ui:style>

  <g:LayoutPanel height="43em" width="40em" ui:field="content">
    <g:layer left="1em" right="1em">
      <g:Label addStyleNames="{style.title}"><ui:msg description="Data export title">Export Data</ui:msg></g:Label>
    </g:layer>
    <g:layer top="3em" bottom="8em" left="1em" right="1em">
      <g:HTMLPanel width="100%">
        <table width="100%" class="gwt-KeyValue">
          <tbody>
            <tr>
              <td colspan="2">
                <g:Label addStyleNames="{style.instructions}"><ui:msg description="Data export instructions">Select the tables to be exported:</ui:msg></g:Label>
              </td>
            </tr>
            <tr>
              <td style="vertical-align:top">
                <ui:msg description="Tables field label">Tables:</ui:msg>                
              </td>
              <td>
                <g:ScrollPanel addStyleNames="{style.inset}" height="15em" width="100%">
                  <g:Tree ui:field="tableTree" />
                </g:ScrollPanel>
              </td>
            </tr>
            <tr>
              <td>
                <ui:msg description="Destination field label">Destination:</ui:msg>
              </td>
              <td>
                <g:RadioButton name="destination" ui:field="destinationDataSource"/> <g:ListBox ui:field="datasources" />
              </td>
            </tr>
            <tr>
              <td/>
              <td>
                <g:RadioButton name="destination" ui:field="destinationFile"><ui:msg description="File name field label">file name:</ui:msg></g:RadioButton><g:TextBox ui:field="file"/>
              </td>
            </tr> 
            <tr>
              <td>
                <ui:msg description="Options field label">Options:</ui:msg>                
              </td>
              <td>
                <g:CheckBox ui:field="incremental"><ui:msg description="Incremental checkbox label">incremental</ui:msg></g:CheckBox>
              </td>
            </tr>              
            <tr>
              <td/>
              <td>
                <g:CheckBox ui:field="withVariables"><ui:msg description="With variables checkbox label">with variables</ui:msg></g:CheckBox>
              </td>
            </tr>              
            <tr>
              <td/>
              <td>
                <g:CheckBox ui:field="useAlias"><ui:msg description="Use alias to rename variable checkbox label">use 'alias' attribute to rename variable</ui:msg></g:CheckBox>
              </td>
            </tr>              
            <tr>
              <td colspan="2">
                <ui:msg description="Participant identifier field label">Participant Identifier:</ui:msg>
              </td>
            </tr>
            <tr>
              <td/>
              <td>
                <g:RadioButton name="idGroup" ui:field="opalId"><ui:msg description="Use opal id radio button label">use Opal ID</ui:msg></g:RadioButton>
              </td>
            </tr> 
            <tr>
              <td/>
              <td>
                <g:RadioButton name="idGroup" ui:field="unitId"><ui:msg description="Unit id dropdown label">use Unit ID:</ui:msg></g:RadioButton> <g:ListBox ui:field="units" />
              </td>
            </tr> 
          </tbody>
        </table>
      </g:HTMLPanel>
    </g:layer>              
    <g:layer bottom="6em" height="0.5em" left="1em" right="1em">
      <g:HTMLPanel>
        <div class="{style.separator}" />
      </g:HTMLPanel>
    </g:layer>
    <g:layer bottom="0em" height="8em" left="1em" right="1em">
      <g:VerticalPanel height="100%" width="100%">
        <g:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE">
          <g:HorizontalPanel>
            <g:Button ui:field="submit"><ui:msg description="Export button label">Export</ui:msg></g:Button>
          </g:HorizontalPanel>
        </g:cell>
      </g:VerticalPanel>
    </g:layer>
  </g:LayoutPanel>

</ui:UiBinder>