<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .separator { border-bottom: .2em solid black; }

    .optionsPanelMsg td { font-size:1.25em; margin: 0.5em 0.5em 0.5em 0.5em; }

    .remoteFolderName{ font-weight:bold; }
    
    .errorMsg{color:red;}
  </ui:style>

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" height="10em" width="35em">
    <g:caption>
      <ui:msg description="Upload file dialog title">File Upload</ui:msg>
    </g:caption>
    <!-- The width here have to match EXACTLY the one on DialogBox above -->
    <g:LayoutPanel height="12em" width="35em">
      <g:layer bottom="9.5em" height="2em" left="1em" right="1em">
        <g:Label ui:field="errorMsg" addStyleNames="{style.errorMsg}"/>
      </g:layer>
      <g:layer height="6em" bottom="3.5em" left="1em" right="1em">
        <g:ScrollPanel>
          <g:FormPanel encoding="multipart/form-data" method="POST" ui:field="form">
            <g:VerticalPanel ui:field="inputFieldPanel">
              <g:HorizontalPanel addStyleNames="{style.optionsPanelMsg}">
                <g:Label>
                  <ui:msg description="Select file to upload label">Select the file to be uploaded in directory:</ui:msg>
                </g:Label>
                <g:Label ui:field="remoteFolderName" addStyleNames="{style.remoteFolderName}" />
              </g:HorizontalPanel>
              <g:FileUpload name="fileToUpload" ui:field="fileToUpload" />
            </g:VerticalPanel>
          </g:FormPanel>
        </g:ScrollPanel>
      </g:layer>
      <g:layer bottom="4em" height="0.5em" left="1em" right="1em">
        <g:HTMLPanel>
          <div class="{style.separator}" />
        </g:HTMLPanel>
      </g:layer>
      <g:layer bottom="0" height="4em" left="1em" right="1em">
        <g:VerticalPanel height="100%" width="100%">
          <g:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE">
            <g:HorizontalPanel>
              <g:Button ui:field="uploadButton">
                <ui:msg description="Upload button label">Upload</ui:msg>
              </g:Button>
              <g:Button ui:field="cancelButton">
                <ui:msg description="Cancel button label">Cancel</ui:msg>
              </g:Button>
            </g:HorizontalPanel>
          </g:cell>
        </g:VerticalPanel>
      </g:layer>
    </g:LayoutPanel>
  </g:DialogBox>

</ui:UiBinder>