<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .optionsPanelMsg td { margin: 0.5em 0.5em
    0.5em 0.5em; }
    .remoteFolderName{ font-weight:bold; }
    .errorMsg{color:red;}
    .right-aligned { float: right; }
    .top-margin { margin-top: 0.5em; }
  </ui:style>

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" height="10em" width="35em">
    <g:caption>
      <ui:msg description="Upload file dialog title">File Upload</ui:msg>
    </g:caption>
    <g:FlowPanel height="12em" width="35em">
      <!-- The width here have to match EXACTLY the one on DialogBox above -->
      <g:DockLayoutPanel unit="EM" height="12em" width="35em">
        <g:north size="2">
          <g:HTMLPanel ui:field="uploadingText" visible="false" addStyleNames="processingText">
            <g:Label><ui:msg description="Uploading label">Uploading file...</ui:msg></g:Label>
            <img src="image/in-progress.gif"/>
          </g:HTMLPanel>
        </g:north>
        <g:center>
          <g:VerticalPanel ui:field="inputFieldPanel" addStyleNames="main {style.optionsPanelMsg}">
            <g:HorizontalPanel>
              <g:Label>
                <ui:msg description="Select file to upload label">Select the file to be uploaded in directory:</ui:msg>
              </g:Label>
              <g:Label ui:field="remoteFolderName" addStyleNames="small-indent {style.remoteFolderName}"/>
            </g:HorizontalPanel>
            <g:FormPanel encoding="multipart/form-data" method="POST" ui:field="form">
              <g:FileUpload name="fileToUpload" ui:field="fileToUpload"/>
            </g:FormPanel>
          </g:VerticalPanel>
        </g:center>
        <g:south size="3.25">
          <g:HTMLPanel addStyleNames="footer">
            <span class="{style.right-aligned} {style.top-margin}">
              <g:Button ui:field="uploadButton">
                <ui:msg description="Upload button label">Upload</ui:msg>
              </g:Button>
              <g:Button ui:field="cancelButton">
                <ui:msg description="Cancel button label">Cancel</ui:msg>
              </g:Button>
            </span>
          </g:HTMLPanel>
        </g:south>
      </g:DockLayoutPanel>
    </g:FlowPanel>
  </g:DialogBox>

</ui:UiBinder>