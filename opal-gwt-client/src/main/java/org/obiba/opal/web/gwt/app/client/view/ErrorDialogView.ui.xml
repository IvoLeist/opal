<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .right-aligned { float: right; }
    .top-margin { margin-top: 0.5em; }
  </ui:style>

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" height="10em" width="30em">
    <g:caption><ui:msg description="Error dialog title">Errors</ui:msg></g:caption>
    <g:DockLayoutPanel unit="EM" height="10em" width="30em">
      <g:center>
        <g:ScrollPanel>
          <g:VerticalPanel width="100%" ui:field="messagePanel" addStyleNames="main"/>
        </g:ScrollPanel>
      </g:center>
      <g:south size="3.25">
        <g:HTMLPanel addStyleNames="footer">
          <span class="{style.right-aligned} {style.top-margin}">
            <g:Button ui:field="okay"><ui:msg description="Okay button label">Okay</ui:msg></g:Button>
          </span>
        </g:HTMLPanel>
      </g:south> 
    </g:DockLayoutPanel> 
  </g:DialogBox>

</ui:UiBinder>