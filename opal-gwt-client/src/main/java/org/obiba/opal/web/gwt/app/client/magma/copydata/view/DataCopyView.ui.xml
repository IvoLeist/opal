<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <o:Modal ui:field="modal" resizable="false" closeVisible="true" keyboard="true" animation="false">

    <b:Alert ui:field="copyNTable" close="false" visible="true" type="INFO"/>

    <g:FlowPanel>
      <g:FlowPanel styleName="input">
        <g:Label addStyleNames="key">
          <ui:msg description="Destination field">Destination</ui:msg>
        </g:Label>
        <o:Chooser ui:field="datasources"/>
      </g:FlowPanel>

      <g:FlowPanel styleName="input" ui:field="newNamePanel" visible="false">
        <b:ControlGroup ui:field="newTableNameGroup">
          <b:Controls>
            <b:TextBox ui:field="newName"/>
            <b:HelpBlock>
              <ui:msg description="New name required when copying in same datasource help">
                New table name is required when copying within the same datasource.
              </ui:msg>
            </b:HelpBlock>
          </b:Controls>
        </b:ControlGroup>
      </g:FlowPanel>

      <o:CollapsiblePanel>
        <g:FlowPanel styleName="input">
          <b:CheckBox ui:field="incremental" addStyleNames="block">
            <ui:msg description="Incremental checkbox label">incremental</ui:msg>
          </b:CheckBox>
          <b:CheckBox ui:field="copyNullValues" addStyleNames="block">
            <ui:msg description="Incremental checkbox label">copy null values</ui:msg>
          </b:CheckBox>
        </g:FlowPanel>
      </o:CollapsiblePanel>

    </g:FlowPanel>

    <b:ModalFooter>
      <b:Button ui:field="submitButton" type="PRIMARY">
        <ui:msg description="Submit button label">Submit</ui:msg>
      </b:Button>
      <b:Button ui:field="cancelButton">
        <ui:msg description="Cancel button label">Cancel</ui:msg>
      </b:Button>
    </b:ModalFooter>
  </o:Modal>

</ui:UiBinder>
