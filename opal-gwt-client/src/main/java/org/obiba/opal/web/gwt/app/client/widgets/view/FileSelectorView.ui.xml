<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">
  
  <ui:style>
    .inline { display: inline; }
    .left-aligned { float: left; }
    .right-aligned { float: right; }
    .left-margin { padding-left: 5px; }
    .right-margin { padding-right: 5px; }
    .top-margin { padding-top: 0.5em; }
    .bottom-margin { 
      padding-bottom: 5px;
      border-bottom: #BBBBBB 1px solid;
    }
    .name-input { width: 90%; }
  </ui:style>
  
  <g:DockLayoutPanel unit="EM">
    <g:center>
      <g:FlowPanel>
      
      <g:HTMLPanel ui:field="namePanel" addStyleNames="{style.top-margin} {style.bottom-margin} {style.left-margin} {style.right-margin}">
        <g:InlineLabel>
          <ui:msg description="Name label">Name</ui:msg>
        </g:InlineLabel>: 
        <g:TextBox ui:field="newFileName" addStyleNames="{style.name-input}" />
      </g:HTMLPanel>
        
      <g:SplitLayoutPanel ui:field="splitLayoutPanel" height="100%">
        <g:west size="200">
          <g:ScrollPanel ui:field="fileSystemTreePanel">
          </g:ScrollPanel>
        </g:west>
        <g:center>
          <g:ScrollPanel ui:field="folderDetailsPanel">
          </g:ScrollPanel>
        </g:center>
      </g:SplitLayoutPanel>
      
      </g:FlowPanel>
    </g:center>
    <g:south size="3.25">
      <g:HTMLPanel addStyleNames="footer">
        <span class="{style.left-aligned} {style.top-margin}">
          <g:HTMLPanel ui:field="createFolderPanel" addStyleNames="{style.inline}">
            <g:TextBox ui:field="createFolderName" />
            <g:Button ui:field="createFolderButton" styleName="btn">
              <ui:msg description="Create Folder button label">Create Folder</ui:msg>
            </g:Button>
          </g:HTMLPanel>
          <g:Button ui:field="uploadButton" styleName="btn">
            <ui:msg description="Upload File label">Upload</ui:msg>
          </g:Button>
        </span>
        <span class="{style.right-aligned} {style.top-margin} {style.left-margin} {style.right-margin}">
          <g:Button ui:field="selectButton" styleName="btn">
            <ui:msg description="Select button label">Select</ui:msg>
          </g:Button>
          <g:Button ui:field="cancelButton" styleName="btn">
            <ui:msg description="Cancel button label">Cancel</ui:msg>
          </g:Button>
        </span>
      </g:HTMLPanel>
    </g:south>
  </g:DockLayoutPanel>
  
</ui:UiBinder>