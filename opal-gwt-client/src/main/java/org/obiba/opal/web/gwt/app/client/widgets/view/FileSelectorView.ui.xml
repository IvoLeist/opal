<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">
  
  <ui:style>
    .full-border { border: 1px solid; }
    .top-border { border-top: 1px solid; }
    .inline { display: inline; }
    .left-aligned { float: left; }
    .right-aligned { float: right; }
    .top-margin { margin-top: 1em; }
    .bottom-margin { margin-bottom: 1em; }
    .name-input { width: 90%; }
  </ui:style>
  
  <g:DockLayoutPanel unit="EM">
    <g:north size="4">
      <g:HTMLPanel ui:field="namePanel" addStyleNames="{style.top-margin} {style.bottom-margin}">
        <g:Label addStyleNames="{style.inline}">
          <ui:msg description="Name label">Name</ui:msg>
        </g:Label>
        <g:Label addStyleNames="{style.inline}">:</g:Label> 
        <g:TextBox addStyleNames="{style.name-input}" />
      </g:HTMLPanel>
    </g:north>
    <g:center>
      <g:SplitLayoutPanel ui:field="splitLayoutPanel" addStyleNames="{style.full-border}">
        <g:west size="200">
          <g:ScrollPanel ui:field="fileSystemTreePanel">
          </g:ScrollPanel>
        </g:west>
        <g:center>
          <g:ScrollPanel ui:field="folderDetailsPanel">
          </g:ScrollPanel>
        </g:center>
      </g:SplitLayoutPanel>
    </g:center>
    <g:south size="5">
      <g:HTMLPanel addStyleNames="{style.top-border} {style.top-margin}">
        <span class="{style.left-aligned} {style.top-margin}">
          <g:HTMLPanel ui:field="createFolderPanel">
            <g:TextBox ui:field="createFolderName" />
            <g:Button ui:field="createFolderButton">
              <ui:msg description="Create Folder button label">Create Folder</ui:msg>
            </g:Button>
          </g:HTMLPanel>
        </span>
        <span class="{style.right-aligned} {style.top-margin}">
          <g:Button ui:field="selectButton">
            <ui:msg description="Select button label">Select</ui:msg>
          </g:Button>
          <g:Button ui:field="cancelButton">
            <ui:msg description="Cancel button label">Cancel</ui:msg>
          </g:Button>
        </span>
      </g:HTMLPanel>
    </g:south> 
  </g:DockLayoutPanel>
  
</ui:UiBinder>