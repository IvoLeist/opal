<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .optionsPanelMsg td { margin: 0.5em 0.5em 0.5em 0.5em; }
    .right-aligned { float: right; }
    .top-margin { margin-top: 0.5em; }
  </ui:style>

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" height="10em" width="35em">
    <g:caption>
      <!-- <g:Label ui:field="dialogTitle"/> -->Add
    </g:caption>
    <g:DockLayoutPanel unit="EM" height="40em" width="35em">
      <g:center>
        <g:VerticalPanel ui:field="inputFieldPanel" addStyleNames="main {style.optionsPanelMsg}">
          <g:Label>
            <ui:msg description="Report Template Name label">Name</ui:msg>:
          </g:Label>
          <g:TextBox name="reportTemplateName" ui:field="reportTemplateName" visibleLength="40"/>
          <g:Label>
            <ui:msg description="BIRT Design File label">BIRT Design File</ui:msg>:
          </g:Label>
          <g:TextBox name="designFile" ui:field="designFile" visibleLength="40"/>      
          <g:Label>
            <ui:msg description="Report Template Format label">Format</ui:msg>:
          </g:Label>
          <g:TextBox name="format" ui:field="format" visibleLength="40"/>    
          <g:Label>
            <ui:msg description="Report Schedule label">Schedule</ui:msg>:
          </g:Label>
          <g:TextBox name="schedule" ui:field="schedule" visibleLength="40"/>                         
        </g:VerticalPanel>
      </g:center>
      <g:south size="3.25">
        <g:HTMLPanel addStyleNames="footer">
          <span class="{style.right-aligned} {style.top-margin}">
            <g:Button ui:field="updateReportTemplateButton">
                <ui:msg description="Save button label">Save</ui:msg>
            </g:Button>
            <g:Button ui:field="cancelButton">
                <ui:msg description="Cancel button label">Cancel</ui:msg>
            </g:Button>
          </span>
        </g:HTMLPanel>
      </g:south> 
    </g:DockLayoutPanel>
  </g:DialogBox>

</ui:UiBinder>