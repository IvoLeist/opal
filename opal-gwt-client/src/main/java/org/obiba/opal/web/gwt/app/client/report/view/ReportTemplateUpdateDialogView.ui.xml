<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client"
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"  
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <ui:style>
    .optionsPanelMsg td { margin: 0.5em 0.5em 0.5em 0.5em; }
    .right-aligned { float: right; }
    .top-margin {
    margin-top: 0.5em; }
  </ui:style>

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" glassEnabled="true">
    <g:caption>
      <ui:msg description="Report template update dialog title">Add/Edit Report Template</ui:msg>
    </g:caption>
    <g:DockLayoutPanel ui:field="contentLayout" unit="EM" height="30em" width="50em">
      <g:center>
        <g:ScrollPanel>
          <g:HTMLPanel addStyleNames="main {style.optionsPanelMsg}">
            <table class="reportTemplateProperties full-width">
              <tr>
                <td>
                  <g:Label addStyleNames="key">
                    <ui:msg description="Name label">Name</ui:msg>:
                  </g:Label>
                </td>
                <td>
                  <g:TextBox name="reportTemplateName" ui:field="reportTemplateName" addStyleNames="text not-so-full-width"/>
                </td>
              </tr>
              <tr>
                <td>
                  <g:Label addStyleNames="key">
                    <ui:msg description="BIRT Design File label">BIRT Design File</ui:msg>:
                  </g:Label>
                </td>
                <td>
                  <g:SimplePanel ui:field="designFilePanel"/>
                </td>
              </tr>
              <tr>
                <td>
                  <g:Label addStyleNames="key">
                    <ui:msg description="Format label">Format</ui:msg>:
                  </g:Label>
                </td>
                <td>
                  <g:ListBox ui:field="format">
                    <g:item value="pdf">PDF</g:item>
                    <g:item value="html">Html</g:item>
                    <g:item value="excel">Excel</g:item>
                  </g:ListBox>
                </td>
              </tr>
              <tr>
                <td>
                  <g:Label addStyleNames="key">
                    <ui:msg description="Parameters label">Parameters</ui:msg>:
                  </g:Label>
                </td>
                <td>
                  <g:SimplePanel addStyleNames="widget" ui:field="reportParametersPanel"/>
                </td>
              </tr>
              <tr>
                <td>
                  <g:RadioButton name="schedule" ui:field="runManuallyRadio" checked="true" addStyleNames="key">
                    <ui:msg description="Run manually label">Run manually</ui:msg>
                  </g:RadioButton>
                </td>
              </tr>
              <tr>
                <td>
                  <g:RadioButton name="schedule" ui:field="scheduleRadio" checked="false" addStyleNames="key">
                    <ui:msg description="Schedule label">Schedule</ui:msg>:
                  </g:RadioButton>
                </td>
                <td>
                  <g:TextBox addStyleNames="text" name="schedule" ui:field="schedule"
                    visibleLength="40"/>
                  <o:HelpImage imageSize="16" tooltipWidth="400px">
                    <g:HTMLPanel>
                      <g:Label addStyleNames="title"><ui:msg description="Schedule Expression label">Schedule Expression</ui:msg></g:Label>
                      <p>
                        <ui:msg description="Schedule Expression information">
                        A schedule expression is a string comprised of 6 or 7 fields separated by white space. Fields can contain any of the allowed values, along with various combinations of the allowed special characters for that field.
                        </ui:msg>
                      </p>
                      <p>
                        Full documentation is available as a <g:Anchor ui:field="cronLink">Quartz Scheduler Tutorial</g:Anchor>.
                      </p>
                      <table cellspacing="1" cellpadding="3">
					    <tbody>
					        <tr>
					            <th>Field Name</th>
					            <th>Mandatory</th>
					            <th>Allowed Values</th>
					            <th>Allowed Special Characters</th>
					        </tr>
					        <tr>
					            <td>Seconds</td>
					            <td>YES</td>
					            <td>0-59</td>
					            <td>, - * /</td>
					        </tr>
					        <tr>
					            <td>Minutes</td>
					            <td>YES</td>
					            <td>0-59</td>
					            <td>, - * /</td>
					        </tr>
					        <tr>
					            <td>Hours</td>
					            <td>YES</td>
					            <td>0-23</td>
					            <td>, - * /</td>
					        </tr>
					        <tr>
					            <td>Day of month</td>
					            <td>YES</td>
					            <td>1-31</td>
					            <td>, - * ? / L W</td>
					        </tr>
					        <tr>
					            <td>Month</td>
					            <td>YES</td>
					            <td>1-12 or JAN-DEC</td>
					            <td>, - * /</td>
					        </tr>
					        <tr>
					            <td>Day of week</td>
					            <td>YES</td>
					            <td>1-7 or SUN-SAT</td>
					            <td>, - * ? / L #</td>
					        </tr>
					        <tr>
					            <td>Year</td>
					            <td>NO</td>
					            <td>empty, 1970-2099</td>
					            <td>, - * /</td>
					        </tr>
					    </tbody>
					  </table>
			            <p>
			              Common schedule expressions examples:
			            </p>
			            <table cellspacing="1" cellpadding="3">
						    <tbody>
						        <tr>
						            <th>Expression</th>
						            <th>Meaning</th>
						        </tr>
						        <tr>
						            <td class="nowrap"><tt>0 15 10 ? * *</tt></td>
						            <td>Fire at 10:15am every day</td>
						        </tr>
						        <tr>
						            <td class="nowrap"><tt>0 15 10 ? * MON-FRI</tt></td>
						            <td>Fire at 10:15am every Monday, Tuesday, Wednesday, Thursday and Friday</td>
						        </tr>
						        <tr>
						            <td class="nowrap"><tt>0 15 10 15 * ?</tt></td>
						            <td>Fire at 10:15am on the 15th day of every month</td>
						        </tr>
						        <tr>
						            <td class="nowrap"><tt>0 10,44 14 ? 3 WED</tt></td>
						            <td>Fire at 2:10pm and at 2:44pm every Wednesday in the month of March.</td>
						        </tr>
						        <tr>
						            <td class="nowrap"><tt>0 15 10 ? * 6#3</tt></td>
						            <td>Fire at 10:15am on the third Friday of every month</td>
						        </tr>
						    </tbody>
						</table>
                    </g:HTMLPanel>
                  </o:HelpImage>
                </td>
              </tr>
              <tr>
                <td>
                  <g:Label addStyleNames="key">
                    <ui:msg description="Notification Emails label">Notification Emails</ui:msg>:
                  </g:Label>
                </td>
                <td>
                  <g:SimplePanel ui:field="notificationEmailsPanel"/>
                </td>
              </tr>
            </table>
          </g:HTMLPanel>
        </g:ScrollPanel>
      </g:center>
      <g:south size="3.25">
        <g:FlowPanel addStyleNames="footer">
          <o:ResizeHandle ui:field="resizeHandle"></o:ResizeHandle>
          <g:Button ui:field="cancelButton" addStyleNames="right-aligned small-top-margin">
            <ui:msg description="Cancel button label">Cancel</ui:msg>
          </g:Button>
          <g:Button ui:field="updateReportTemplateButton" addStyleNames="right-aligned small-top-margin">
            <ui:msg description="Save button label">Save</ui:msg>
          </g:Button>
        </g:FlowPanel>
      </g:south>
    </g:DockLayoutPanel>

  </g:DialogBox>

</ui:UiBinder>