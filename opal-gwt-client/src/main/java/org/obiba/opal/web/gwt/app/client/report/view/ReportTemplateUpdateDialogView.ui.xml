<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client"
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"  
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <ui:style>
    .optionsPanelMsg td { margin: 0.5em 0.5em 0.5em 0.5em; }
    .right-aligned { float: right; }
    .top-margin {
    margin-top: 0.5em; }
  </ui:style>

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" glassEnabled="true">
    <g:caption>
      <ui:msg description="Report template update dialog title">Add/Edit Report Template</ui:msg>
    </g:caption>
    <g:DockLayoutPanel ui:field="contentLayout" unit="EM" height="30em" width="50em">
      <g:center>
        <g:ScrollPanel>
          <g:HTMLPanel addStyleNames="main {style.optionsPanelMsg}">
            <table class="reportTemplateProperties full-width">
              <tr>
                <td>
                  <g:Label addStyleNames="key">
                    <ui:msg description="Name label">Name</ui:msg>
                    :
                  </g:Label>
                </td>
                <td>
                  <g:TextBox name="reportTemplateName" ui:field="reportTemplateName" addStyleNames="text not-so-full-width"/>
                </td>
              </tr>
              <tr>
                <td>
                  <g:Label addStyleNames="key">
                    <ui:msg description="BIRT Design File label">BIRT Design File</ui:msg>
                    :
                  </g:Label>
                </td>
                <td>
                  <g:SimplePanel ui:field="designFilePanel"/>
                </td>
              </tr>
              <tr>
                <td>
                  <g:Label addStyleNames="key">
                    <ui:msg description="Format label">Format</ui:msg>
                    :
                  </g:Label>
                </td>
                <td>
                  <g:ListBox ui:field="format">
                    <g:item value="pdf">PDF</g:item>
                    <g:item value="html">Html</g:item>
                    <g:item value="excel">Excel</g:item>
                  </g:ListBox>
                </td>
              </tr>
              <tr>
                <td>
                  <g:Label addStyleNames="key">
                    <ui:msg description="Parameters label">Parameters</ui:msg>
                    :
                  </g:Label>
                </td>
                <td>
                  <g:SimplePanel addStyleNames="widget" ui:field="reportParametersPanel"/>
                </td>
              </tr>
              <tr>
                <td>
                  <g:RadioButton name="schedule" ui:field="runManuallyRadio" checked="true" addStyleNames="key">
                    <ui:msg description="Run manually label">Run manually</ui:msg>
                  </g:RadioButton>
                </td>
              </tr>
              <tr>
                <td>
                  <g:RadioButton name="schedule" ui:field="scheduleRadio" checked="false" addStyleNames="key">
                    <ui:msg description="Schedule label">Schedule</ui:msg>
                    :
                  </g:RadioButton>
                </td>
                <td>
                  <g:TextBox addStyleNames="text" name="schedule" ui:field="schedule"
                    visibleLength="40"/>
                </td>
              </tr>
              <tr>
                <td>
                  <g:Label addStyleNames="key">
                    <ui:msg description="Notification Emails label">Notification Emails</ui:msg>
                    :
                  </g:Label>
                </td>
                <td>
                  <g:SimplePanel ui:field="notificationEmailsPanel"/>
                </td>
              </tr>
            </table>

          </g:HTMLPanel>
        </g:ScrollPanel>
      </g:center>
      <g:south size="3.25">
        <g:FlowPanel addStyleNames="footer">
          <o:ResizeHandle ui:field="resizeHandle"></o:ResizeHandle>
          <g:Button ui:field="cancelButton" addStyleNames="right-aligned small-top-margin">
            <ui:msg description="Cancel button label">Cancel</ui:msg>
          </g:Button>
          <g:Button ui:field="updateReportTemplateButton" addStyleNames="right-aligned small-top-margin">
            <ui:msg description="Save button label">Save</ui:msg>
          </g:Button>
        </g:FlowPanel>
      </g:south>
    </g:DockLayoutPanel>

  </g:DialogBox>

</ui:UiBinder>