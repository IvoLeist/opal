<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <b:Paragraph>
      <ui:msg description="Taxonomies text">Taxonomies are controlled vocabularies that can be used to classify
        variables.
      </ui:msg>
    </b:Paragraph>
    <b:FluidRow>
      <b:Column size="3">
        <g:ScrollPanel>
          <b:NavList ui:field="taxonomyList">
            <b:NavHeader>
              <ui:msg description="Taxonomies label">Taxonomies</ui:msg>
            </b:NavHeader>
          </b:NavList>
        </g:ScrollPanel>
        <b:ButtonGroup addStyleNames="top-margin">
          <b:Button icon="PLUS" type="INFO" ui:field="add">
            <ui:msg description="Add Taxonomy label">Add Taxonomy</ui:msg>
          </b:Button>
        </b:ButtonGroup>
      </b:Column>
      <b:Column size="9">
        <g:ScrollPanel ui:field="taxonomyDetailsPanel"/>
      </b:Column>
    </b:FluidRow>
  </g:FlowPanel>

</ui:UiBinder>