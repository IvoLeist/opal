<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .title {
      font-size: small;
      margin-right: 1em;
    }

    .title-light {
      color: gray;
      font-size: small;
    }

    .plot {
      float: left;
      margin-right: 2em
    }
  </ui:style>

  <g:HTMLPanel>
    <table>
      <tr>
        <td class="{style.title-light}"><ui:msg description="N (number of observations)">N</ui:msg>:
        </td>
        <td>
          <g:Label addStyleNames="small-indent {style.title}" ui:field="obs">N</g:Label>
        </td>
        <td class="{style.title-light}"><ui:msg description="Mode">Mode</ui:msg>:
        </td>
        <td>
          <g:Label addStyleNames="small-indent {style.title}" ui:field="mode">mode</g:Label>
        </td>
      </tr>
    </table>
    <b:TabPanel tabPosition="left">
      <b:Tab icon="BAR_CHART" active="true">
        <g:HTMLPanel>
          <div id="plot-container">
            <div ui:field="frequencyElement" class="{style.plot}"/>
          </div>
        </g:HTMLPanel>
      </b:Tab>
      <b:Tab icon="TABLE">
        <o:DefaultFlexTable ui:field="grid"/>
      </b:Tab>
    </b:TabPanel>

  </g:HTMLPanel>

</ui:UiBinder>