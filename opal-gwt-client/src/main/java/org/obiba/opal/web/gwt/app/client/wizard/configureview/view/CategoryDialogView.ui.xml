<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:o="urn:org.obiba.opal.web.gwt.app.client.widgets.view"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" 
  ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <ui:style>
    .optionsPanelMsg td { margin: 0.5em 0.5em 0.5em 0.5em; }
    .right-aligned { float: right; }
    .top-margin { margin-top: 0.5em; }
  </ui:style>

  <g:DialogBox ui:field="dialog" addStyleNames="categoryDialog" autoHide="false" modal="true" height="15em" width="35em">
    <g:caption>
      <ui:msg description="Add new attribute title" >Add New Attribute</ui:msg>
    </g:caption>
    <g:DockLayoutPanel unit="EM" height="15em" width="35em">
      <g:center>
        <g:ScrollPanel>
          <g:HTMLPanel addStyleNames="main {style.optionsPanelMsg}">
            <table>
              <tr>
                <td><ui:msg description="Name label">Name</ui:msg>:</td>
                <td><g:SimplePanel ui:field="categoryNamePanel" addStyleNames="small-indent" /></td>
              </tr>
              <tr>
                <td colspan="2"><g:SimplePanel ui:field="simplePanel" addStyleNames="labelPanel"/></td>
              </tr>
            </table>
          </g:HTMLPanel>
        </g:ScrollPanel>
      </g:center>
      <g:south size="3.25">
        <g:HTMLPanel addStyleNames="footer">
          <span class="{style.right-aligned} {style.top-margin}">
            <g:Button ui:field="saveButton">
                <ui:msg description="Save button label">Save</ui:msg>
            </g:Button>
            <g:Button ui:field="cancelButton">
                <ui:msg description="Cancel button label">Cancel</ui:msg>
            </g:Button>
          </span>
        </g:HTMLPanel>
      </g:south> 
    </g:DockLayoutPanel>
  </g:DialogBox>

</ui:UiBinder>