<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:ace="urn:import:org.obiba.opal.web.gwt.ace.client"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <g:FlowPanel addStyleNames="clearfix well no-bottom-margin">
      <b:FluidRow>
        <b:Column size="3">
          <o:ValueTypeChooser ui:field="valueTypes"/>
          <b:CheckBox ui:field="repeatable">
            <ui:msg description="Repeatable label">Repeatable</ui:msg>
          </b:CheckBox>
        </b:Column>
        <b:Column size="9">
          <g:FlowPanel addStyleNames="pull-right">
            <b:Button ui:field="testScript" size="SMALL" type="INFO" addStyleNames="small-indent">
              <ui:msg description="Test label">Test</ui:msg>
            </b:Button>
          </g:FlowPanel>
        </b:Column>
      </b:FluidRow>
      <b:FluidRow addStyleNames="pull-left">
        <b:HelpInline>
          <ui:msg description="Script Help label">
            You can test the whole script or a selected portion.
          </ui:msg>
        </b:HelpInline>
      </b:FluidRow>
    </g:FlowPanel>
    <ace:AceEditor ui:field="scriptArea" addStyleNames="ace-editor"/>
  </g:FlowPanel>

</ui:UiBinder>