<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:o='urn:import:org.obiba.opal.web.gwt.app.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys='com.google.gwt.i18n.server.keygen.MD5KeyGenerator'
             ui:generateLocales='default'
             xmlns:a="urn:import:org.obiba.opal.web.gwt.app.client.analysis.component">

  <o:Modal ui:field="dialog" closeVisible="true" keyboard="true" animation="false">

    <b:ControlGroup ui:field="analyseGroup">
      <b:ControlLabel>
        <ui:msg description="Analysis Edit Model analyse name">Name</ui:msg>
      </b:ControlLabel>
      <b:Controls>
        <b:TextBox ui:field="analyseName"/>
      </b:Controls>
    </b:ControlGroup>

    <b:ControlGroup ui:field="typesGroup">
      <b:ControlLabel>
        <ui:msg description="Analysis Edit Model label">Type</ui:msg>
      </b:ControlLabel>
      <b:Controls>
        <a:PluginTypeChooser ui:field="typeChooser" isMultipleSelect="false"/>
      </b:Controls>
      <b:HelpBlock ui:field="typeHelp">
      </b:HelpBlock>
    </b:ControlGroup>

    <b:ModalFooter>
      <b:Button ui:field="runButton" type="PRIMARY">
        <ui:msg description="Analysis Edit Model run label">Run</ui:msg>
      </b:Button>
      <b:Button ui:field="cancelButton">
        <ui:msg description="Cancel button label">Cancel</ui:msg>
      </b:Button>
    </b:ModalFooter>

  </o:Modal>
</ui:UiBinder>