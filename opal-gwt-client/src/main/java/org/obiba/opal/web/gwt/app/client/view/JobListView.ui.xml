<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" 
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <ui:style>
    .jobList td + td {
      color: black;
      text-decoration: none;
    }
    .jobList td + td:hover {
      cursor: default;
    }
    .jobList td + td + td + td + td + td + td span + span {
      margin-left: 1em;	
    }
    .jobList td + td + td + td + td + td + td span {
  	  color: blue;
      text-decoration: underline;	
    }
    .jobList td + td + td + td + td + td + td span:hover {
      cursor: pointer;
    }
    .jobList.center {
      margin-top: 1em;
    }
    .jobList.clear-image {
      float: right;	
    }
    .jobList.clear-image:hover {
      cursor: pointer;
    }
  </ui:style>
  
  <o:WorkbenchLayout withInfo="false">
    <g:Label><ui:msg description="Jobs list title">Jobs List</ui:msg></g:Label>
    <g:Label><ui:msg description="Jobs list instructions">Check the status of the jobs that are currently running or that were completed.</ui:msg></g:Label>
    <g:FlowPanel>
      <!-- g:Button>Clear</g:Button>
      <g:Button>Refresh</g:Button-->
    </g:FlowPanel>
    <g:FlowPanel addStyleNames="{style.jobList} {style.center}">
      <g:Image ui:field="clearImage" url="image/garbage.png" addStyleNames="{style.jobList} {style.clear-image}" />
      <g2:CellTable width="100%" ui:field="table" addStyleNames="{style.jobList} {style.clear-image}" />
    </g:FlowPanel>
  </o:WorkbenchLayout>  
  
</ui:UiBinder>