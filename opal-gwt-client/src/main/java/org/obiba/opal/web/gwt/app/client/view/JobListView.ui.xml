<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .wb-top {
    border-bottom:1px solid #BBBBBB;
    padding: 0.25em 0 0 1em;
    float: left;
    }
    
    .wb-top .title {
    font-size: 1.3em;
    }
    
    .jobList td + td {
      color: black;
      text-decoration: none;
    }
    .jobList td + td:hover {
      cursor: default;
    }
    .jobList td {
      color: blue;
      text-decoration: underline;
    } 
    .jobList td:hover {
      cursor: pointer;
    } 
    .jobList td + td + td + td + td + td + td span + span {
      margin-left: 1em;	
    }
    .jobList td + td + td + td + td + td + td span {
  	  color: blue;
      text-decoration: underline;	
    }
    .jobList td + td + td + td + td + td + td span:hover {
      cursor: pointer;
    }
  </ui:style>
  
  <g:DockLayoutPanel>
    <g:north size="30">
      <g:FlowPanel addStyleNames="{style.wb-top}">
        <g:Label addStyleNames="{style.title}"><ui:msg description="Jobs list title">Jobs List</ui:msg></g:Label>
      </g:FlowPanel>
    </g:north>
    <g:center>
      <g:ScrollPanel width="100%" >
        <g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
          <g2:CellTable width="100%" ui:field="table" addStyleNames="{style.jobList}"/>
        </g:VerticalPanel>
      </g:ScrollPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>