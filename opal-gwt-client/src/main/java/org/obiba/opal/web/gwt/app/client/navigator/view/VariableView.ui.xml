<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" 
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <ui:style>
    .title { font-size: small; }
    .title-light { color: gray; font-size: small; }
    .left-aligned { float : left; margin-right : 0.5em }
  </ui:style>

  <g:VerticalPanel width="100%" addStyleNames="navigator">
     <g:FlowPanel addStyleNames="titlebar">
       <g:Label addStyleNames="title" ui:field="variableName">Variable Name</g:Label>
       <g:Label addStyleNames="small-indent">(Variable)</g:Label>
     </g:FlowPanel>

     <g:FlowPanel ui:field="toolbarPanel" addStyleNames="toolbar toolbar-left"/>

     <g:HTMLPanel>
      <table class="item-properties small-indent">
        <tr>
          <td>
            <g:Label addStyleNames="key">
              <ui:msg description="Entity type label">Entity Type</ui:msg>:
            </g:Label>
          </td>
          <td>
            <g:Label ui:field="entityType"/>
          </td>
        </tr>
        <tr>
          <td>
            <g:Label addStyleNames="key">
              <ui:msg description="Value Type label">Value Type</ui:msg>:
            </g:Label>
          </td>
          <td>
            <g:Label ui:field="valueType"/>
          </td>
        </tr>
        <tr>
          <td>
            <g:Label addStyleNames="key">
              <ui:msg description="Unit label">Unit</ui:msg>:
            </g:Label>
          </td>
          <td>
            <g:Label ui:field="unit"/>
          </td>
        </tr>
        <tr>
          <td>
            <g:Label addStyleNames="key">
              <ui:msg description="Mime Type label">Mime Type</ui:msg>:
            </g:Label>
          </td>
          <td>
            <g:Label ui:field="mimeType"/>
          </td>
        </tr>
        <tr>
          <td>
            <g:Label addStyleNames="key">
              <ui:msg description="Repeatable label">Repeatable</ui:msg>:
            </g:Label>
          </td>
          <td>
             <g:Label ui:field="repeatable"/>
          </td>
        </tr>
        <tr>
          <td>
            <g:Label addStyleNames="key">
              <ui:msg description="Occurrence Group label">Occurrence Group</ui:msg>:
            </g:Label>
          </td>
          <td>
             <g:Label ui:field="occurrenceGroup"/>
          </td>
        </tr>
      </table>
    </g:HTMLPanel>

    <g:HTMLPanel>
      <table class="item-properties small-indent small-top-margin">
        <tr>
          <td>
            <g:Label addStyleNames="key">
              <ui:msg description="Label label">Label</ui:msg>:
            </g:Label>
          </td>
          <td>
            <g:Label ui:field="label"/>
          </td>
        </tr>
      </table>
    </g:HTMLPanel>

     <o:HorizontalTabLayout ui:field="tabs" addStyleNames="small-indent top-margin not-so-full-width">
        
	    <g:Anchor ui:field="categoryTableTitle" />
        <g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
          <g:InlineLabel ui:field="noCategories"><ui:msg description="No Categories label">No Categories</ui:msg></g:InlineLabel>
          <g2:CellTable width="100%" ui:field="categoryTable" />
        </g:VerticalPanel>
    
	    <g:Anchor ui:field="attributeTableTitle" />
        <g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
          <g:InlineLabel ui:field="noAttributes"><ui:msg description="No Attributes label">No Attributes</ui:msg></g:InlineLabel>
          <g2:CellTable width="100%" ui:field="attributeTable" />
        </g:VerticalPanel>
         
	    <g:Anchor><ui:msg description="Summary tab title">Summary</ui:msg></g:Anchor>
        <g:SimplePanel ui:field="summary" width="100%" />
         
     </o:HorizontalTabLayout>
     
  </g:VerticalPanel>

</ui:UiBinder>