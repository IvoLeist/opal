<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client" 
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  xmlns:pretty="urn:import:org.obiba.opal.web.gwt.prettify.client"
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <ui:style>
    .title { font-size: small; }
    .title-light { color: gray; font-size: small; }
    .left-aligned { float : left; margin-right : 0.5em }
  </ui:style>

  <g:FlowPanel width="100%" addStyleNames="navigator">
     <g:FlowPanel addStyleNames="titlebar">
       <g:Label addStyleNames="title" ui:field="variableName">Variable Name</g:Label>
       <g:Label addStyleNames="small-indent">(Variable)</g:Label>
     </g:FlowPanel>

     <g:FlowPanel ui:field="toolbarPanel" addStyleNames="toolbar toolbar-left"/>

     <o:PropertiesTable condensed="true" bordered="true" zebra="true" addStyleNames="small-dual-indent top-margin" keyStyleNames="span4">
       <g:FlowPanel>
         <g:Label><ui:msg description="Entity type label">Entity Type</ui:msg></g:Label>
         <g:Label ui:field="entityType"/>
       </g:FlowPanel>
       
       <g:FlowPanel>
         <g:Label><ui:msg description="Value Type label">Value Type</ui:msg></g:Label>
         <g:Label ui:field="valueType"/>
       </g:FlowPanel>
       
       <g:FlowPanel>
         <g:Label><ui:msg description="Unit label">Unit</ui:msg></g:Label>
         <g:Label ui:field="unit"/>
       </g:FlowPanel>
       <g:FlowPanel>
         <g:Label><ui:msg description="Mime Type label">Mime Type</ui:msg></g:Label>
         <g:Label ui:field="mimeType"/>
       </g:FlowPanel>
       <g:FlowPanel>
         <g:Label><ui:msg description="Repeatable label">Repeatable</ui:msg></g:Label>
         <g:Label ui:field="repeatable"/>
       </g:FlowPanel>
       <g:FlowPanel>
         <g:Label><ui:msg description="Occurrence Group label">Occurrence Group</ui:msg></g:Label>
         <g:Label ui:field="occurrenceGroup"/>
       </g:FlowPanel>
       <g:FlowPanel>
         <g:Label><ui:msg description="Label label">Label</ui:msg></g:Label>
         <g:Label ui:field="label"/>
       </g:FlowPanel>
       
     </o:PropertiesTable>

     <o:HorizontalTabLayout ui:field="tabs" addStyleNames="small-dual-indent top-margin">
        <g:Anchor ui:field="categoryTableTitle" />
        <g:FlowPanel>
          <g:InlineLabel ui:field="noCategories"><ui:msg description="No Categories label">No Categories</ui:msg></g:InlineLabel>
          <c:SimplePager ui:field="categoryTablePager" location="CENTER" addStyleNames="right-aligned" />
          <o:Table width="100%" ui:field="categoryTable" addStyleNames="left-aligned" />
        </g:FlowPanel>
    
	    <g:Anchor ui:field="attributeTableTitle" />
        <g:FlowPanel>
          <g:InlineLabel ui:field="noAttributes"><ui:msg description="No Attributes label">No Attributes</ui:msg></g:InlineLabel>
          <c:SimplePager ui:field="attributeTablePager" location="CENTER" addStyleNames="right-aligned" />
          <o:Table width="100%" ui:field="attributeTable" addStyleNames="left-aligned" />
        </g:FlowPanel>
    
        <g:Anchor><ui:msg description="Script label">Script</ui:msg></g:Anchor>
        <g:FlowPanel>
          <g:InlineLabel ui:field="notDerived"><ui:msg description="Not Derived Variable label">Not a Derived Variable</ui:msg></g:InlineLabel>
          <g:InlineLabel ui:field="noScript"><ui:msg description="No Script label">No Script</ui:msg></g:InlineLabel>
          <pretty:PrettyPrintLabel ui:field="script"/>
        </g:FlowPanel>
         
	    <g:Anchor><ui:msg description="Summary tab title">Summary</ui:msg></g:Anchor>
        <g:SimplePanel ui:field="summary" width="100%" />
        
        <g:Anchor><ui:msg description="Permissions label" >Permissions</ui:msg></g:Anchor>
        <g:SimplePanel ui:field="permissions"></g:SimplePanel>
         
     </o:HorizontalTabLayout>
     
  </g:FlowPanel>

</ui:UiBinder>