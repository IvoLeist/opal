<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client"
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <g:FlowPanel addStyleNames="variablesListTabContent">
    <g:FlowPanel>
      <g:Label addStyleNames="inline">
        <ui:msg description="List of derived variables label">List of derived variables</ui:msg>:
      </g:Label>
      <g:FlowPanel addStyleNames="navigationPanel">
        <g:SuggestBox ui:field="variableNameSuggestBox" addStyleNames="small-indent"/>
        <g:Anchor ui:field="previous">
          <img src="image/16/previous.png"/>
        </g:Anchor>
        <g:Anchor ui:field="next">
          <img src="image/16/next.png"/>
        </g:Anchor>
        <g:Button ui:field="addButton" styleName="btn small-indent">
          <ui:msg description="Add button label">Add</ui:msg>
        </g:Button>
        <g:Button ui:field="removeButton" styleName="btn small-indent">
          <ui:msg description="Remove label">Remove</ui:msg>
        </g:Button>
      </g:FlowPanel>
      <g:Button ui:field="saveChangesButton" styleName="btn right-aligned">
        <ui:msg description="Save changes button label">Save Changes</ui:msg>
      </g:Button>
    </g:FlowPanel>
    
    <g:FlowPanel addStyleNames="form">
      <g:FlowPanel addStyleNames="input inline-block">
        <g:Label addStyleNames="key"><ui:msg description="Name label">Name</ui:msg></g:Label>
        <g:TextBox ui:field="variableName" width="15em" enabled="false"/>
      </g:FlowPanel>
      <g:FlowPanel addStyleNames="input inline-block indent">
        <g:Label addStyleNames="key"><ui:msg description="Value Type label">Value Type</ui:msg></g:Label>
        <g:ListBox ui:field="valueType">
          <g:item value="text"><ui:msg description="Text label">text</ui:msg></g:item>
          <g:item value="decimal"><ui:msg description="Decimal label">decimal</ui:msg></g:item>            
          <g:item value="integer"><ui:msg description="Integer label">integer</ui:msg></g:item>            
          <g:item value="binary"><ui:msg description="Binary label">binary</ui:msg></g:item>            
          <g:item value="boolean"><ui:msg description="Boolean label">boolean</ui:msg></g:item>
          <g:item value="datetime"><ui:msg description="Datetime label">datetime</ui:msg></g:item>            
          <g:item value="date"><ui:msg description="Date label">date</ui:msg></g:item>            
          <g:item value="locale"><ui:msg description="Locale label">locale</ui:msg></g:item>            
        </g:ListBox>
      </g:FlowPanel>
      <g:FlowPanel addStyleNames="input inline-block indent">
        <g:CheckBox ui:field="repeatableCheckbox" addStyleNames="key">
          <ui:msg description="Repeatable label">Repeatable</ui:msg>
        </g:CheckBox>
      </g:FlowPanel>
    </g:FlowPanel>
    
    <o:HorizontalTabLayout ui:field="variableDetailTabs" addStyleNames="top-margin">
        <g:Anchor><ui:msg description="Script label">Script</ui:msg></g:Anchor>
        <g:SimplePanel ui:field="scriptWidgetPanel" addStyleNames="small-top-margin"/>
    
        <g:Anchor><ui:msg description="Categories label">Categories</ui:msg></g:Anchor>
        <g:SimplePanel ui:field="categoriesTabPanel"/>
        
        <g:Anchor><ui:msg description="Attributes label">Attributes</ui:msg></g:Anchor>
        <g:SimplePanel ui:field="attributesTabPanel"/>
      
        <g:Anchor><ui:msg description="Options label">Options</ui:msg></g:Anchor>
        <g:FlowPanel>
          <g:FlowPanel addStyleNames="input">
            <g:Label addStyleNames="key"><ui:msg description="Occurence group label">Occurence Group</ui:msg></g:Label>
            <g:TextBox  enabled="false" ui:field="occurenceGroup"/>
          </g:FlowPanel>
          <g:FlowPanel addStyleNames="input">
            <g:Label addStyleNames="key"><ui:msg description="Unit label">Unit</ui:msg></g:Label>
            <g:TextBox ui:field="unit"/>
          </g:FlowPanel>
          <g:FlowPanel addStyleNames="input">
            <g:Label addStyleNames="key"><ui:msg description="Mime type label">Mime-Type</ui:msg></g:Label>
            <g:TextBox ui:field="mimeType"/>
          </g:FlowPanel>
        </g:FlowPanel>
  
        <g:Anchor><ui:msg description="Summary tab title">Summary</ui:msg></g:Anchor>
        <g:SimplePanel ui:field="summaryTabPanel" width="100%" />
        
    </o:HorizontalTabLayout>
  </g:FlowPanel>
</ui:UiBinder>
