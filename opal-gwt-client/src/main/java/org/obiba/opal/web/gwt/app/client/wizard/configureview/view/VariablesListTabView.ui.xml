<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client">

  <g:FlowPanel addStyleNames="variablesListTabContent">
    <g:FlowPanel>
      <g:Label addStyleNames="inline">
        <ui:msg description="List of derived variables label">List of derived variables</ui:msg>
        :
      </g:Label>
      <g:Button ui:field="saveChangesButton" addStyleNames="right-aligned">
        <ui:msg description="Save changes button label">Save Changes</ui:msg>
      </g:Button>
    </g:FlowPanel>
    
    <g:FlowPanel addStyleNames="navigationPanel">
      <g:Label addStyleNames="inline">
        <ui:msg description="Go to label">Go to</ui:msg>
        :
      </g:Label>
      <g:SuggestBox ui:field="variableNameSuggestBox" addStyleNames="small-indent"/>
      <g:Anchor ui:field="previous">
        <img src="image/16/previous.png" align="middle"/>
      </g:Anchor>
      <g:Anchor ui:field="next">
        <img src="image/16/next.png" align="middle"/>
      </g:Anchor>
      <g:Button ui:field="removeButton" addStyleNames="right-aligned indent">
        <ui:msg description="Remove label">Remove</ui:msg>
      </g:Button>
      <g:Button ui:field="addButton" addStyleNames="right-aligned">
        <ui:msg description="Add button label">Add</ui:msg>
      </g:Button>
    </g:FlowPanel>
    
    <g:HTMLPanel addStyleNames="form">      
      <table>
        <tr>
          <td>
            <g:Label>
              <ui:msg description="Name label">Name</ui:msg>
              :
            </g:Label>
          </td>
          <td>
            <g:TextBox ui:field="variableName" width="15em"/>
          </td>
        </tr>
        <tr>
          <td>
            <g:Label>
              <ui:msg description="Type label">Type</ui:msg>
              :
            </g:Label>
          </td>
          <td>
            <g:ListBox ui:field="valueType">
              <g:item value="text"><ui:msg description="Text label">text</ui:msg></g:item>
              <g:item value="decimal"><ui:msg description="Decimal label">decimal</ui:msg></g:item>            
              <g:item value="integer"><ui:msg description="Integer label">integer</ui:msg></g:item>            
              <g:item value="binary"><ui:msg description="Binary label">binary</ui:msg></g:item>            
              <g:item value="boolean"><ui:msg description="Boolean label">boolean</ui:msg></g:item>
              <g:item value="datetime"><ui:msg description="Datetime label">datetime</ui:msg></g:item>            
              <g:item value="date"><ui:msg description="Date label">date</ui:msg></g:item>            
              <g:item value="locale"><ui:msg description="Locale label">locale</ui:msg></g:item>            
            </g:ListBox>
          </td>
        </tr>
        <tr>
          <td/>
          <td>
            <g:CheckBox ui:field="repeatableCheckbox"/>
            <g:Label addStyleNames="inline">
              <ui:msg description="Repeatable label">Repeatable</ui:msg>
            </g:Label>
          </td>
        </tr>
        <tr>
          <td>
            <g:Label>
              <ui:msg description="Script label">Script</ui:msg>
              :
            </g:Label>
          </td>
          <td>
            <g:SimplePanel ui:field="scriptWidgetPanel" addStyleNames="small-top-margin"/>
          </td>
        </tr>
      </table>
    </g:HTMLPanel>
    <g:TabLayoutPanel barHeight="2" barUnit="EM" width="100%" height="15em" ui:field="variableDetailTabs">
      <g:tab>
        <g:header>
          <ui:msg description="Categories label">Categories</ui:msg>
        </g:header>
        <g:SimplePanel ui:field="categoriesTabPanel"/>
      </g:tab>
      <g:tab>
        <g:header>
          <ui:msg description="Attributes label">Attributes</ui:msg>
        </g:header>
        <g:SimplePanel ui:field="attributesTabPanel"/>
      </g:tab>
      <g:tab>
        <g:header>
          <ui:msg description="Options label">Options</ui:msg>
        </g:header>
        <g:HTMLPanel ui:field="optionsTabPanel">
          <table>
            <tr>
              <td>
                <g:Label>
                  <ui:msg description="Occurence group label">Occurence Group</ui:msg>
                  :
                </g:Label>
              </td>
              <td>
                <g:TextBox  enabled="false" ui:field="occurenceGroup"/>
              </td>
            </tr>
            <tr>
              <td>
                <g:Label>
                  <ui:msg description="Unit label">Unit</ui:msg>
                  :
                </g:Label>
              </td>
              <td>
                <g:TextBox ui:field="unit"/>
              </td>              
            </tr>
            <tr>
              <td>
                <g:Label>
                  <ui:msg description="Mime type label">Mime-Type</ui:msg>
                  :
                </g:Label>
              </td>
              <td>
                <g:TextBox ui:field="mimeType"/>
              </td>                
            </tr>
          </table>
        </g:HTMLPanel>
      </g:tab>
    </g:TabLayoutPanel>
  </g:FlowPanel>
</ui:UiBinder>
