<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .separator { border-bottom: .2em solid black; }

    .optionsPanelMsg td { margin: 0.5em 0.5em 0.5em 0.5em; }

    .errorMsg{color:red;}
  </ui:style>

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" height="8em" width="35em">
    <g:caption>
      <ui:msg description="Create folder dialog title">Create Folder</ui:msg>
    </g:caption>
    <g:LayoutPanel height="11em" width="35em">
      <g:layer bottom="7.5em" height="3em" left="1em" right="1em">
        <g:Label ui:field="errorMsg" addStyleNames="{style.errorMsg}" />
      </g:layer>
      <g:layer bottom="5.5em" height="3.5em" left="1em" right="1em">
        <g:VerticalPanel ui:field="inputFieldPanel" addStyleNames="{style.optionsPanelMsg}">
          <g:Label>
            <ui:msg description="Enter name of folder to create label">Please enter the name of the folder to create:</ui:msg>
          </g:Label>
        </g:VerticalPanel>
      </g:layer>
      <g:layer height="3em" bottom="3.5em" left="1em" right="1em">
        <g:TextBox name="folderToCreate" ui:field="folderToCreate" visibleLength="40"/>
      </g:layer>
      <g:layer bottom="3.5em" height="0.5em" left="1em" right="1em">
        <g:HTMLPanel>
          <div class="{style.separator}" />
        </g:HTMLPanel>
      </g:layer>
      <g:layer bottom="0" height="4em" left="1em" right="1em">
        <g:VerticalPanel height="100%" width="100%">
          <g:cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE">
            <g:HorizontalPanel>
              <g:Button ui:field="createFolderButton">
                <ui:msg description="Create folder button label">Create Folder</ui:msg>
              </g:Button>
              <g:Button ui:field="cancelButton">
                <ui:msg description="Cancel button label">Cancel</ui:msg>
              </g:Button>
            </g:HorizontalPanel>
          </g:cell>
        </g:VerticalPanel>
      </g:layer>
    </g:LayoutPanel>
  </g:DialogBox>

</ui:UiBinder>