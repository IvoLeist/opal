<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:style>
    .error { color: black; font-style:italic; }
    .applicationTitle { font-weight: bold; font-size: x-large; }
  </ui:style>

  <g:HTMLPanel>
    <table>
      <tr>
        <td/>
        <td>
          <span class='{style.applicationTitle}'><g:Label ui:field="titleMessage" text="Regrettably a system error has occured" /></span>
        </td>
      </tr>
      <tr>
        <td/>
        <td>
          <span class='{style.error}'><g:Label ui:field="detailMessage" text="Please notify your Opal administrator" /></span>          
        </td>
      </tr>
      <tr>
        <td/>
        <td>
          <g:Button ui:field="okay" text="Okay" />
        </td>
      </tr>
    </table>
  </g:HTMLPanel>
</ui:UiBinder>