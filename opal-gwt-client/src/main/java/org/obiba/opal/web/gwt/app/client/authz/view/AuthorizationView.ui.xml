<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <g:Label ui:field="explanation" addStyleNames="bottom-margin" visible="false"></g:Label>
    <o:HorizontalTabLayout addStyleNames="top-margin">
      <g:Anchor>
        <ui:msg description="Users label">Users</ui:msg>
      </g:Anchor>
      <g:SimplePanel ui:field="users"></g:SimplePanel>
      <g:Anchor>
        <ui:msg description="Groups label">Groups</ui:msg>
      </g:Anchor>
      <g:SimplePanel ui:field="groups"></g:SimplePanel>
    </o:HorizontalTabLayout>
  </g:FlowPanel>
</ui:UiBinder>