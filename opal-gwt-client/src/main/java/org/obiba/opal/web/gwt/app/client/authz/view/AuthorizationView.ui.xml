<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <g:Label ui:field="explanation" addStyleNames="bottom-margin" visible="false"></g:Label>

    <o:NavPillsPanel>

      <b:NavLink icon="USER">
        <ui:msg description="Users label">Users</ui:msg>
      </b:NavLink>
      <g:SimplePanel ui:field="users"></g:SimplePanel>

      <b:NavLink icon="GROUP">
        <ui:msg description="Groups label">Groups</ui:msg>
      </b:NavLink>
      <g:SimplePanel ui:field="groups"></g:SimplePanel>

    </o:NavPillsPanel>

  </g:FlowPanel>
</ui:UiBinder>