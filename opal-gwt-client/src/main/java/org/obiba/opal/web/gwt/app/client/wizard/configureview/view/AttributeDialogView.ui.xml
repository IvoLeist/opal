<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:o="urn:org.obiba.opal.web.gwt.app.client.widgets.view"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .optionsPanelMsg td { margin: 0.5em 0.5em 0.5em 0.5em; }
    .right-aligned { float: right; }
    .top-margin { margin-top: 0.5em; }
  </ui:style>

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" height="18em" width="35em">
    <g:caption>
      <ui:msg description="Add new attribute title" >Add New Attribute</ui:msg>
    </g:caption>
    <g:DockLayoutPanel unit="EM" height="18em" width="35em">
      <g:center>
        <g:VerticalPanel  addStyleNames="main {style.optionsPanelMsg}">
          <g:HTMLPanel height="5.5em">
            <table class="gwt-KeyValue" cellspacing="10">
              <tbody>
                <tr>
                  <td>
                    <ui:msg description="Name label">Name</ui:msg>:
                  </td>
                  <td>
                     <g:SimplePanel ui:field="namePanel">
		               <g:HTMLPanel ui:field="editableName" addStyleNames="indent">
		                 <table>
		                   <tbody>
		                     <tr>
		                       <td>
		                         <g:RadioButton name="name" ui:field="predefinedAttributeNameRadioButton" checked="true"><ui:msg description="Predefined label">Predefined:</ui:msg></g:RadioButton><g:ListBox ui:field="labels" />
		                       </td>
		                     </tr>
		                     <tr>
	                           <td>
	                             <g:RadioButton name="name" ui:field="customAttributeNameRadioButton"><ui:msg description="Custom label">Custom:</ui:msg></g:RadioButton><g:TextBox name="customAttributeName" ui:field="customAttributeName" visibleLength="26"/>
	                           </td>
		                     </tr>
		                   </tbody>
		                 </table>
		               </g:HTMLPanel>
	                 </g:SimplePanel>                  
                  </td>
                </tr>
              </tbody>
            </table>
          </g:HTMLPanel>
          <g:ScrollPanel ui:field="scrollPanel" height="8em"/>
        </g:VerticalPanel>
      </g:center>
      <g:south size="3.25">
        <g:HTMLPanel addStyleNames="footer">
          <span class="{style.right-aligned} {style.top-margin}">
            <g:Button ui:field="cancelButton">
                <ui:msg description="Cancel button label">Cancel</ui:msg>
            </g:Button>
            <g:Button ui:field="saveButton">
                <ui:msg description="Save button label">Save</ui:msg>
            </g:Button>
          </span>
        </g:HTMLPanel>
      </g:south> 
    </g:DockLayoutPanel>
  </g:DialogBox>

</ui:UiBinder>