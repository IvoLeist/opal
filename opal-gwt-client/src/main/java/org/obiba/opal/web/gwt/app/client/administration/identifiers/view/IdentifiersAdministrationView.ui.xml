<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <g:FlowPanel addStyleNames="page-header">
      <b:Breadcrumbs ui:field="breadcrumbs"/>
    </g:FlowPanel>

    <b:Paragraph>
      Identifiers mappings are defined per entity type. Mapping identifiers consist of associating, for a given entity,
      its identifier in the system to its identifiers in the data being imported or exported.
    </b:Paragraph>

    <g:FlowPanel>
      <b:ButtonGroup>
        <b:Button type="INFO" icon="PLUS" ui:field="addIdTable">
          <ui:msg description="Add Identifiers Table label">Add Identifiers Table</ui:msg>
        </b:Button>
      </b:ButtonGroup>
      <b:ButtonGroup>
        <b:DropdownButton text="Import Identifiers" icon="UPLOAD">
          <b:NavLink ui:field="importSystemId">
            <ui:msg description="Import System Identifiers label">Import system identifiers...</ui:msg>
          </b:NavLink>
          <b:NavLink ui:field="importIdMapping">
            <ui:msg description="Import Identifiers Mapping label">Import identifiers mapping...</ui:msg>
          </b:NavLink>
        </b:DropdownButton>
      </b:ButtonGroup>
      <b:ButtonGroup>
        <b:Button icon="TRASH" ui:field="deleteIdTable">
        </b:Button>
      </b:ButtonGroup>
    </g:FlowPanel>

    <b:FluidRow>
      <b:Column size="2">
        <b:NavList ui:field="selector" addStyleNames="top-margin">
          <b:NavHeader>
            <ui:msg description="Entity Types label">Entity Types</ui:msg>
          </b:NavHeader>
        </b:NavList>
      </b:Column>
      <b:Column size="10">
        <g:FlowPanel ui:field="body"/>
      </b:Column>
    </b:FluidRow>


  </g:FlowPanel>
</ui:UiBinder>