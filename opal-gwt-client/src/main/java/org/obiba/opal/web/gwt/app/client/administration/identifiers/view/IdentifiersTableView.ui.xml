<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <b:Heading size="3" ui:field="title"/>

    <b:Heading size="4">
      <ui:msg description="Summary label">Summary</ui:msg>
    </b:Heading>
    <b:FluidRow>
      <b:Column size="6">
        <o:PropertiesTable keyStyleNames="span3">

          <o:PropertyPanel>
            <g:Label>
              <ui:msg description="Number of system identifiers label">Number of system identifiers</ui:msg>
            </g:Label>
            <g:Label ui:field="systemIdsCount"/>
          </o:PropertyPanel>

          <o:PropertyPanel>
            <g:Label>
              <ui:msg description="Number of identifier mappings label">Number of identifier mappings</ui:msg>
            </g:Label>
            <g:Label ui:field="idMappingsCount"/>
          </o:PropertyPanel>

        </o:PropertiesTable>
      </b:Column>
    </b:FluidRow>

    <b:Heading size="4" addStyleNames="pull-left">
      <ui:msg description="Identifiers label">Identifiers</ui:msg>
    </b:Heading>
    <g:FlowPanel ui:field="tablePanel"/>
  </g:FlowPanel>
</ui:UiBinder>