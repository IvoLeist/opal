<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" 
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <ui:style>
    .jobList.center {
      margin-top: 1em;
    }
    .jobList.clear-image {
      float: right;	
    }
    .jobList.clear-image:hover {
      cursor: pointer;
    }
  </ui:style>
  
  <o:WorkbenchLayout withInfo="false">
    <g:Label><ui:msg description="Jobs list title">Jobs List</ui:msg></g:Label>
    <g:Label><ui:msg description="Jobs list instructions">Check the status of the jobs that are currently running or that were completed.</ui:msg></g:Label>
    <g:FlowPanel>
      <g:Button ui:field="refreshButton"><ui:msg description="Refresh jobs list">Refresh</ui:msg></g:Button>
      <g:Button ui:field="clearButton"><ui:msg description="Clear jobs list">Clear</ui:msg></g:Button>
    </g:FlowPanel>
    <g:FlowPanel addStyleNames="{style.jobList} {style.center}">
      <g2:CellTable width="100%" ui:field="table" addStyleNames="gwt-CellTable {style.jobList} {style.clear-image}" />
    </g:FlowPanel>
  </o:WorkbenchLayout>  
  
</ui:UiBinder>