<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" 
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <o:WorkbenchLayout withInfo="false">
    <g:Label><ui:msg description="Jobs label">Jobs</ui:msg></g:Label>
    <g:Label></g:Label>
    <g:FlowPanel>
      <g:Button ui:field="refreshButton"><ui:msg description="Refresh jobs list">Refresh</ui:msg></g:Button>
      <g:Button ui:field="clearButton"><ui:msg description="Clear jobs list">Clear</ui:msg></g:Button>
    </g:FlowPanel>
    
    <g:FlowPanel>
	    <g:Label addStyleNames="p"><ui:msg description="Jobs list instructions">Check the status of the jobs that are currently running or that were completed.</ui:msg></g:Label>
	    
	    <o:HorizontalTabLayout addStyleNames="small-indent top-margin not-so-full-width">
		  <g:Anchor><ui:msg description="Jobs label">Jobs</ui:msg></g:Anchor>
	      <g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
	        <g:InlineLabel ui:field="noJobs"><ui:msg description="No Jobs label">No Jobs</ui:msg></g:InlineLabel>
	        <g2:CellTable ui:field="table" width="100%" addStyleNames="left-aligned gwt-CellTable"/>
	      </g:VerticalPanel>
	    </o:HorizontalTabLayout>
    </g:FlowPanel>
    
  </o:WorkbenchLayout>  
  
</ui:UiBinder>