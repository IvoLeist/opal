<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:b2="urn:import:com.github.gwtbootstrap.client.ui.base"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <g:FlowPanel addStyleNames="pull-right">
      <b:ButtonGroup>
        <b:Button icon="DOWNLOAD" ui:field="downloadDictionary">
          <ui:msg description="Download dictionary label">Download dictionary</ui:msg>
        </b:Button>
      </b:ButtonGroup>
      <b:DropdownButton text="Tasks" icon="TASKS" ui:field="tasksBtn" rightDropdown="true">
        <b:NavLink icon="SIGNIN" ui:field="importData">
          <ui:msg description="Import data label">Import data...</ui:msg>
        </b:NavLink>
        <b:NavLink icon="SIGNOUT" ui:field="exportData">
          <ui:msg description="Export data label">Export data...</ui:msg>
        </b:NavLink>
        <b:NavLink icon="COPY" ui:field="copyData">
          <ui:msg description="Copy data label">Copy data...</ui:msg>
        </b:NavLink>
      </b:DropdownButton>
    </g:FlowPanel>

    <b:TabPanel tabPosition="above" ui:field="tabPanel">
      <b:Tab heading="Dictionary" active="true">
        <g:FlowPanel addStyleNames="small-bottom-margin">
          <b:SimplePager ui:field="pager" location="RIGHT" addStyleNames="pull-right small-top-margin small-indent"/>
          <b:DropdownButton text="Add Table" type="INFO" icon="PLUS" ui:field="addBtn"
              addStyleNames="small-top-margin">
            <b:NavLink icon="TABLE" ui:field="addTable">
              <ui:msg description="Add Table label">Add table...</ui:msg>
            </b:NavLink>
            <b:NavLink icon="TABLE" ui:field="addUpdateTables">
              <ui:msg description="Add Update Tables label">Add/update tables from dictionary...</ui:msg>
            </b:NavLink>
            <b:NavLink icon="COG" ui:field="addView">
              <ui:msg description="Add view label">Add view...</ui:msg>
            </b:NavLink>
          </b:DropdownButton>
        </g:FlowPanel>

        <b:Alert ui:field="selectAllItemsAlert" close="false" visible="false"
            addStyleNames="select">
          <g:Grid>
            <g:row>
              <g:customCell>
                <g:Label ui:field="selectAllStatus" addStyleNames="inline"/>
              </g:customCell>
              <g:customCell>
                <b2:IconAnchor ui:field="selectAllAnchor" addStyleNames="inline xsmall-indent"/>
              </g:customCell>
              <g:customCell>
                <g:FlowPanel>

                  <b2:IconAnchor ui:field="clearSelectionAnchor" icon="REMOVE"
                      addStyleNames="inline xsmall-indent">
                    <ui:msg description="Clear label">Clear</ui:msg>
                  </b2:IconAnchor>

                  <b2:IconAnchor ui:field="exportSelectionAnchor" icon="SIGNOUT"
                      addStyleNames="inline xsmall-indent">
                    <ui:msg description="Export label">Export</ui:msg>
                  </b2:IconAnchor>

                  <b2:IconAnchor ui:field="copySelectionAnchor" icon="COPY"
                      addStyleNames="inline xsmall-indent">
                    <ui:msg description="Copy label">Copy</ui:msg>
                  </b2:IconAnchor>

                  <b2:IconAnchor icon="TRASH" ui:field="deleteTables" addStyleNames="inline xsmall-indent">
                    <ui:msg description="Delete label">Delete</ui:msg>
                  </b2:IconAnchor>

                </g:FlowPanel>
              </g:customCell>
            </g:row>
          </g:Grid>
        </b:Alert>

        <o:Table ui:field="table"/>
      </b:Tab>

      <b:Tab heading="Permissions">
        <g:SimplePanel ui:field="permissionsPanel"/>
      </b:Tab>

    </b:TabPanel>
  </g:FlowPanel>

</ui:UiBinder>