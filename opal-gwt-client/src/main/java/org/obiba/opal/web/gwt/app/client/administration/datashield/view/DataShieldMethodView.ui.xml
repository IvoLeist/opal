<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client"
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .optionsPanelMsg td { margin: 0.5em 0.5em 0.5em 0.5em; }
  </ui:style>

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" glassEnabled="true">
    <g:DockLayoutPanel ui:field="contentLayout" unit="EM" height="22em" width="40em">
      <g:center>
        <g:ScrollPanel>
          <g:HTMLPanel addStyleNames="main {style.optionsPanelMsg}">
            <table class="full-width">
              <tr>
                <td>
                  <g:Label addStyleNames="key">
                    <ui:msg description="Name label">Name</ui:msg>:
                  </g:Label>
                </td>
                <td>
                  <g:TextBox addStyleNames="text not-so-full-width" name="name" ui:field="name"/>
                </td>
              </tr>
              <tr>
	            <td>
	              <g:Label addStyleNames="key"><ui:msg description="Type label">Type</ui:msg>:</g:Label>          
	            </td>
	            <td>
	              <g:ListBox ui:field="typeList" visibleItemCount="1"/>
	            </td>
	          </tr>
              <tr>
                <td>
                  <g:Label addStyleNames="key" ui:field="functionLabel">
                    <ui:msg description="DataShield function label">Function</ui:msg>:
                  </g:Label>
                </td>
                <td>
                  <g:TextBox addStyleNames="text not-so-full-width" name="function" ui:field="function"/>
                </td>
              </tr>
              <tr>
                <td valign="top">
                  <g:Label addStyleNames="key" ui:field="scriptLabel">
                    <ui:msg description="DataShield script label">Script</ui:msg>:
                  </g:Label>
                </td>
                <td>
                  <g:TextArea addStyleNames="text not-so-full-width" name="script" ui:field="script"/>
                </td>
              </tr>
            </table>

          </g:HTMLPanel>
        </g:ScrollPanel>
      </g:center>
      <g:south size="3.25">
        <g:FlowPanel addStyleNames="footer">
          <o:ResizeHandle ui:field="resizeHandle"></o:ResizeHandle>
          <g:Button ui:field="cancelButton" addStyleNames="btn right-aligned small-top-margin">
            <ui:msg description="Cancel button label">Cancel</ui:msg>
          </g:Button>
          <g:Button ui:field="saveButton" addStyleNames="btn primary right-aligned small-top-margin">
            <ui:msg description="Save button label">Save</ui:msg>
          </g:Button>
        </g:FlowPanel>
      </g:south>
    </g:DockLayoutPanel>

  </g:DialogBox>

</ui:UiBinder>