<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <g:FlowPanel>
    <b:Heading size="4">
      <ui:msg description="Plots label">Plots</ui:msg>
    </b:Heading>
    <b:Row>
      <b:Column size="4" offset="1">
        <g:SimplePanel ui:field="histogramPanel"/>
      </b:Column>
      <b:Column size="4" offset="1">
        <g:SimplePanel ui:field="normalProbability"/>
      </b:Column>
    </b:Row>

    <b:Heading size="4">
      <ui:msg description="Statistics label">Statistics</ui:msg>
    </b:Heading>
    <o:DefaultFlexTable ui:field="grid" addStyleNames="span4"/>

  </g:FlowPanel>

</ui:UiBinder>