<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">
   
  <o:WorkbenchLayout>
    <g:Label><ui:msg description="Data import title">Import Data</ui:msg></g:Label>
    <g:Label ui:field="instructionsLabel" />
    <g:Button ui:field="submit"><ui:msg description="Import button label">Import</ui:msg></g:Button>
    
    <g:FlowPanel>
	    <g:HTMLPanel ui:field="formStep">
	      <table class="gwt-KeyValue" cellspacing="10">
	        <tbody>
	          <tr>
	            <td style="vertical-align:top">
	              <ui:msg description="File field label">File:</ui:msg>                
	            </td>
	            <td>
	              <g:SimplePanel ui:field="filePanel" />
	            </td>
	          </tr>
	          <tr>
	            <td>
	              <ui:msg description="Destination field label">Destination:</ui:msg>                
	            </td>
	            <td>
	              <g:ListBox ui:field="datasources" />
	            </td>
	          </tr>
	          <tr>
	            <td>
	              <g:CheckBox ui:field="shouldArchive"><ui:msg description="Archive field label">Archive:</ui:msg></g:CheckBox>
	            </td>
	            <td>
	              <g:SimplePanel ui:field="archivePanel" />
	            </td>
	          </tr>
	          <tr>
	            <td>
	              <ui:msg description="Participant identifier field label">Participant Identifier:</ui:msg>                
	            </td>
	            <td>
	              <g:RadioButton name="participantId" checked="true"><ui:msg description="Unit id dropdown label">use Unit ID:</ui:msg></g:RadioButton>
	              <g:ListBox ui:field="units" />
	            </td>
	          </tr>
	        </tbody>
	      </table>
	    </g:HTMLPanel>
	    <g:FlowPanel ui:field="conclusionStep">
	       <g:Label addStyleNames="title p"><ui:msg description="Data import job">The data importation process can be followed using the Job ID:</ui:msg></g:Label>
	       <g:Anchor ui:field="jobLink" addStyleNames="large-indent">Job ID</g:Anchor>
	       <g:Label addStyleNames="p"><ui:msg description="Data import new">You may now import more data:</ui:msg></g:Label>
	       <g:Button ui:field="returnButton" addStyleNames="large-indent"><ui:msg description="Return Data Import button">Return to Data Import</ui:msg></g:Button>
	     </g:FlowPanel>
     </g:FlowPanel>
     
     <g:FlowPanel>
	    <g:HTMLPanel ui:field="formInfo">
	      <g:Label addStyleNames="title"><ui:msg description="Data File label">Data File</ui:msg></g:Label>
	      <p><ui:msg description="Data File information">The data file is to be selected on the server side.Use the file explorer to upload a data file. Currently only Onyx exportation files can be imported.</ui:msg></p>
	
	      <g:Label addStyleNames="title"><ui:msg description="Destination Dataset label">Destination Dataset</ui:msg></g:Label>
	      <p><ui:msg description="Destination Dataset information">Tables and variables will be created in the selected dataset prior to the importation of data.</ui:msg></p>
	
	      <g:Label addStyleNames="title"><ui:msg description="Archive label">Archive</ui:msg></g:Label>
	      <p><ui:msg description="Archive information">Select a directory on the server side where the data file will be stored once successfully imported.</ui:msg></p>
	
	      <g:Label addStyleNames="title"><ui:msg description="Participant Identifier label">Participant Identifier</ui:msg></g:Label>
	      <p><ui:msg description="Participant Identifier information">Store the provided participant identifier in the participant key database. An Opal internal identifier will be affected to each of the new participants. To achieve that, select a 'unit' that has been predefined in your Opal system.</ui:msg></p>
	    </g:HTMLPanel>
	     <g:HTMLPanel ui:field="conclusionInfo">
	       <g:Label><ui:msg description="No information">No information.</ui:msg></g:Label>
	     </g:HTMLPanel>
	 </g:FlowPanel>
	 
  </o:WorkbenchLayout>
  
</ui:UiBinder>
