<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" height="100%" width="50em">
    <g:caption>Data Import</g:caption>
    <g:ScrollPanel>
    <!-- These sizes have to match EXACTLY the ones on DialogBox above -->
    <g:LayoutPanel width="50em" ui:field="content">
      <g:layer top="0em" bottom="5em">
        <g:Label>Content</g:Label>
      </g:layer>
      <g:layer bottom="6em" height="1em">
        <g:Label>-----------------------------------</g:Label>
      </g:layer>
      <g:layer bottom="0" height="5em">
        <g:HorizontalPanel>
          <g:Button>Import</g:Button>
          <g:Button ui:field="cancel">Cancel</g:Button>
        </g:HorizontalPanel>
      </g:layer>
    </g:LayoutPanel>
    </g:ScrollPanel>
  </g:DialogBox>

</ui:UiBinder>