<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .separator { border-bottom: 2px solid black; }
    .left-aligned { float : left; margin-right : 0.5em }
    .title-bold { font-weight: bold; font-size: medium; }
    .title { font-size: medium; }
    .title-light { color: gray; font-size: medium; }
    .tableList td:first-child  {
      color: blue;
      text-decoration: underline;
    }
    .tableList td:first-child:hover {
      cursor: pointer;
    }
    .spreadsheet img:hover {
      cursor: pointer;
    }    
  </ui:style>

  <g:LayoutPanel>
    <g:layer left="1em" width="50%" top='0.5em' height="2em">
      <g:FlowPanel>
        <g:Label addStyleNames="{style.left-aligned},{style.title-bold}" ui:field="tableName">SwimmingHeight</g:Label>
        <g:Label addStyleNames="{style.left-aligned},{style.title}">(Table)</g:Label>
      </g:FlowPanel>     
    </g:layer>
    <g:layer right="1em" width='50%' top='0.5em' height='2em'>
     <g:FlowPanel ui:field="spreadsheetDownloadPanel"  addStyleNames="{style.spreadsheet}"/>
    </g:layer>
    <g:layer top="2.7em" height="0.5em" left="1em" right="1em">
      <g:HTMLPanel>
        <div class="{style.separator}" />
      </g:HTMLPanel>
    </g:layer>
    <g:layer left="1em" width='50%' top='3.2em' height='2em'>
      <g:FlowPanel>
        <g:Label addStyleNames="{style.left-aligned},{style.title-light}">Entity Type:</g:Label>
        <g:Label addStyleNames="{style.left-aligned},{style.title}" ui:field="entityType">Entity Name</g:Label>
      </g:FlowPanel>     
    </g:layer>       
    <g:layer left="1em" width='50%' top='6em' height='2em'>
      <g:FlowPanel>
        <g:Label addStyleNames="{style.left-aligned},{style.title-bold}"><ui:msg description="Variables menu item">Variables</ui:msg></g:Label>
        <g:Label addStyleNames="{style.left-aligned},{style.title}" ui:field="count">(0000)</g:Label>
      </g:FlowPanel>     
    </g:layer>
    <g:layer width="97%" left="1em" height="90em" top="7.5em">
      <g:ScrollPanel width="100%" >
        <g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
          <g2:CellTable width="100%" ui:field="table" addStyleNames="{style.tableList}" />
        </g:VerticalPanel>
      </g:ScrollPanel>
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>