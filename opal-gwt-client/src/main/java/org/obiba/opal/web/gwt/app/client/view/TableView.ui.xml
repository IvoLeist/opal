<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .separator { border-bottom: 2px solid black; }
    .left-aligned { float : left; margin-right : 0.5em }
    .title-bold { font-weight: bold; font-size: medium; }
    .title { font-size: small; }
    .title-light { color: gray; font-size: small; }
    .tableList td:first-child  {
      color: blue;
      text-decoration: underline;
    }
    .tableList td:first-child:hover {
      cursor: pointer;
    }
    .toolbar img {
      margin-left: 5px;
    }
    .toolbar img:hover {
      cursor: pointer;
    }
  </ui:style>

  <g:LayoutPanel>
    <g:layer left="1em" width="97%" top='0.5em' height="2em">
      <g:FlowPanel>
        <g:Label addStyleNames="{style.left-aligned},{style.title-bold}" ui:field="tableName">SwimmingHeight</g:Label>
        <g:Label addStyleNames="{style.left-aligned},{style.title}">(Table)</g:Label>
      </g:FlowPanel>     
    </g:layer>
    <g:layer top="2.9em" left="1em" height="2em" width="50%">
        <g:Hyperlink ui:field="parentLink">..</g:Hyperlink>
    </g:layer>
    <g:layer top='2.5em' right="1em" width='50%' height='2em'>
     <g:FlowPanel ui:field="toolbarPanel"  addStyleNames="{style.toolbar}"/>
    </g:layer>
    <g:layer top="4.7em" height="0.5em" left="1em" right="1em">
      <g:HTMLPanel>
        <div class="{style.separator}" />
      </g:HTMLPanel>
    </g:layer>
    <g:layer top='6em' left="1em" width='50%' height='2em'>
      <g:FlowPanel>
        <g:Label addStyleNames="{style.left-aligned},{style.title-light}">Entity Type:</g:Label>
        <g:Label addStyleNames="{style.left-aligned},{style.title}" ui:field="entityType">Entity Name</g:Label>
      </g:FlowPanel>     
    </g:layer>     
    <g:layer top='8em' left="1em" width='50%' height='2em'>
      <g:Label ui:field="variablesTableTitle" addStyleNames="{style.left-aligned},{style.title-bold}" />     
    </g:layer>    
     <g:layer top="7.5em" width="97%" left="1em" height="100em">
       <g:FlowPanel>
         <g2:CellTable width="100%" ui:field="table" addStyleNames="{style.tableList}" />
       </g:FlowPanel>
     </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>