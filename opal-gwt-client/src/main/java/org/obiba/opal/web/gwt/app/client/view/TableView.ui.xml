<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .title { font-size: small; }
    .title-light { color: gray; font-size: small; }
  </ui:style>

  <g:VerticalPanel width="100%" addStyleNames="navigator">
     <g:FlowPanel addStyleNames="titlebar">
       <g:Label addStyleNames="title" ui:field="tableName">Table Name</g:Label>
       <g:Label addStyleNames="small-indent" ui:field="tableOrView">(View)</g:Label>
     </g:FlowPanel>
      
     <g:FlowPanel ui:field="toolbarPanel" addStyleNames="toolbar toolbar-left"/>
     
     <g:HorizontalPanel addStyleNames="small-indent">
       <g:Label addStyleNames="{style.title-light}"><ui:msg description="Entity type label">Entity Type</ui:msg>:</g:Label>
       <g:Label addStyleNames="small-indent {style.title}" ui:field="entityType">Entity Name</g:Label>
     </g:HorizontalPanel>
     
     <g:FlowPanel addStyleNames="tableList">
       <g:Label ui:field="variablesTableTitle" addStyleNames="small-indent left-aligned title-bold"><ui:msg description="Variables label">Variables</ui:msg></g:Label>
       <g2:CellTable width="100%" ui:field="table" addStyleNames="left-aligned" />
     </g:FlowPanel>
     
     <g:Image ui:field="loading" url="image/loading.gif" addStyleNames="loading"/>
     
  </g:VerticalPanel>

</ui:UiBinder>