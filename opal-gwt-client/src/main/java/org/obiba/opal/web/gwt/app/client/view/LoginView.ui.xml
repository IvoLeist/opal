<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">
  <ui:style>
    .error { color: red; }
    .applicationTitle { font-weight: bold; font-size: x-large; padding-bottom: 0.5em; }
  </ui:style>

  <g:HTMLPanel>
    <div class="login ui-corner-all">
      <table>
      	<tr>
      	  <td/>
      	  <td>
      	    <g:Label ui:field="applicationName" addStyleNames="{style.applicationTitle}"><ui:msg description="Opal application name">Opal</ui:msg></g:Label>
      	  </td>
      	</tr>
      	<tr>
      	  <td/>
      	  <td>
      	    <g:Label ui:field="errorMessage" addStyleNames="{style.error}"><ui:msg description="Authentication failed error message">Authentication Failed</ui:msg></g:Label>          
      	  </td>
      	</tr>
      	<tr>
      	  <td>
      	    <g:Label><ui:msg description="User name field label">User Name</ui:msg></g:Label>
      	  </td>
      	  <td>
      	    <g:TextBox ui:field="userName" width="15em"  />
      	  </td>
      	</tr>
      	<tr>
      	  <td>
      	    <g:Label><ui:msg description="Password field label">Password</ui:msg></g:Label>
      	  </td>
      	  <td>
      	    <g:PasswordTextBox ui:field="password" width="15em" />
      	  </td>
      	</tr>
      	<tr>
      	  <td/>
      	  <td>
      	    <g:Button ui:field="login" styleName="btn"><ui:msg description="Sign in button label">Sign In</ui:msg></g:Button>
      	  </td>
      	</tr>
      </table>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>