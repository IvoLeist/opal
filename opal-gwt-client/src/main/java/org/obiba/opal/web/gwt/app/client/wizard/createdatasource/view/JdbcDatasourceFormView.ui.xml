<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"  
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">
  
  <g:HTMLPanel>
    <table class="gwt-KeyValue" cellspacing="10">
          <tbody>
            <tr>
              <td colspan="2">
                <ui:msg description="Database Connection Parameters label">Database Connection Parameters</ui:msg>
              </td>
            </tr>
            <tr>
              <td>
                <g:Label addStyleNames="indent"><ui:msg description="Driver label">Driver</ui:msg>:</g:Label>          
              </td>
              <td>
                <g:ListBox ui:field="driver" visibleItemCount="1" addStyleNames="small-indent" />
              </td>
            </tr>
            <tr>
              <td>
                <g:Label addStyleNames="indent"><ui:msg description="URL label">URL</ui:msg>:</g:Label>          
              </td>
              <td>
                <g:TextBox ui:field="url" addStyleNames="small-indent" />
              </td>
            </tr>
            <tr>
              <td>
                <g:Label addStyleNames="indent"><ui:msg description="User Name label">User Name</ui:msg>:</g:Label>          
              </td>
              <td>
                <g:TextBox ui:field="username" addStyleNames="small-indent" />
              </td>
            </tr>
            <tr>
              <td>
                <g:Label addStyleNames="indent"><ui:msg description="Password label">Password</ui:msg>:</g:Label>          
              </td>
              <td>
                <g:PasswordTextBox ui:field="password" addStyleNames="small-indent" />
              </td>
            </tr>
            <tr>
              <td colspan="2">
                <ui:msg description="Table Parameters label">Table Parameters</ui:msg>
              </td>
            </tr>
            <tr>
              <td>
                <g:Label addStyleNames="indent"><ui:msg description="Created Timestamp Column Name label">Created Timestamp Column Name</ui:msg>:</g:Label>          
              </td>
              <td>
                <g:TextBox ui:field="defaultCreatedTimestampColumnName" addStyleNames="small-indent" />
              </td>
            </tr>
            <tr>
              <td>
                <g:Label addStyleNames="indent"><ui:msg description="Updated Timestamp Column Name label">Updated Timestamp Column Name</ui:msg>:</g:Label>          
              </td>
              <td>
                <g:TextBox ui:field="defaultUpdatedTimestampColumnName" addStyleNames="small-indent" />
              </td>
            </tr>
            <tr>
              <td>
                <g:Label addStyleNames="indent"><ui:msg description="Include meta-data tables label">Include meta-data tables</ui:msg>:</g:Label>          
              </td>
              <td>
                <g:RadioButton name="includeMetaDataTablesGroup" ui:field="useMetadataTablesOption" addStyleNames="small-indent"><ui:msg description="Yes label">Yes</ui:msg></g:RadioButton>
                <g:RadioButton name="includeMetaDataTablesGroup" ui:field="doNotUseMetadataTablesOption" addStyleNames="small-indent"><ui:msg description="No label">No</ui:msg></g:RadioButton>
              </td>
            </tr>
          </tbody>
        </table>
  </g:HTMLPanel>
  
</ui:UiBinder>