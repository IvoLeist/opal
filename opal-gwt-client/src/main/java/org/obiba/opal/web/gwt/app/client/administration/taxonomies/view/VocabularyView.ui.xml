<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <g:FlowPanel addStyleNames="page-header">
      <b:Breadcrumbs ui:field="breadcrumbs"/>
    </g:FlowPanel>
    <FluidRow addStyleNames="page-header">
      <Column size="9">
        <Heading size="3">
          <ui:msg description="Vocabulary label">Vocabulary</ui:msg>
        </Heading>
      </Column>
      <Column size="3">
        <ButtonGroup addStyleNames="pull-right">
          <Button type="INFO" size="SMALL" icon="PENCIL" ui:field="editButton">
            <ui:msg description="Edit Vocabulary">Edit</ui:msg>
          </Button>
        </ButtonGroup>
        <ButtonGroup addStyleNames="pull-right">
          <Button type="INFO" size="SMALL" ui:field="saveButton">
            <ui:msg description="Add Term">Save</ui:msg>
          </Button>
        </ButtonGroup>
      </Column>
    </FluidRow>
    <b:Heading size="4" ui:field="vocabularyName"/>
    <b:Row>
      <b:Column size="6">
        <g:FlowPanel ui:field="vocabularyPanel"/>
      </b:Column>
    </b:Row>

    <b:Heading size="5">Terms</b:Heading>
    <b:FluidRow>
      <b:Column size="6">
        <g:FlowPanel ui:field="termsPanel" addStyleNames="items"></g:FlowPanel>
      </b:Column>
      <b:Column size="6">
        <g:FlowPanel ui:field="termPanel"></g:FlowPanel>
      </b:Column>
    </b:FluidRow>

    <!--<t:TermsTable ui:field="termsTable" width="100%" addStyleNames="left-aligned first-column-checkbox"/>-->
  </g:FlowPanel>
</ui:UiBinder>