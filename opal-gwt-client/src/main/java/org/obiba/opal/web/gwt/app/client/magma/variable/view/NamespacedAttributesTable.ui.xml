<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:b2="urn:import:com.github.gwtbootstrap.client.ui.base"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>

    <g:FlowPanel addStyleNames="clearfix">
      <b:Heading size="5" ui:field="namespaceLabel"/>
      <b:SimplePager ui:field="pager" location="RIGHT" addStyleNames="pull-right"/>
    </g:FlowPanel>

    <g:FlowPanel addStyleNames="small-top-margin">
      <b:Alert ui:field="selectAllItemsAlert" close="false" visible="false" addStyleNames="select">
        <g:Grid>
          <g:row>
            <g:customCell>
              <g:Label ui:field="selectAllStatus" addStyleNames="inline"/>
            </g:customCell>
            <g:customCell>
              <b2:IconAnchor ui:field="selectAllAnchor" addStyleNames="inline xsmall-indent"/>
            </g:customCell>
            <g:customCell>
              <g:FlowPanel>

                <b2:IconAnchor ui:field="clearSelectionAnchor" icon="REMOVE" visible="false"
                    addStyleNames="inline xsmall-indent">
                  <ui:msg description="Clear selection label">Clear</ui:msg>
                </b2:IconAnchor>

                <b2:IconAnchor ui:field="editLink" icon="PENCIL" addStyleNames="inline xsmall-indent">
                  <ui:msg description="Edit attribute label">Edit</ui:msg>
                </b2:IconAnchor>

                <b2:IconAnchor ui:field="deleteLink" icon="TRASH" addStyleNames="inline xsmall-indent">
                  <ui:msg description="Delete attribute label">Delete</ui:msg>
                </b2:IconAnchor>

              </g:FlowPanel>
            </g:customCell>
          </g:row>
        </g:Grid>
      </b:Alert>
    </g:FlowPanel>

    <o:Table ui:field="table"/>
  </g:FlowPanel>

</ui:UiBinder>