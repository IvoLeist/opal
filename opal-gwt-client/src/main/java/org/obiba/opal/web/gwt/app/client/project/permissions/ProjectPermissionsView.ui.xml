<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>

    <b:Paragraph ui:field="emptyHelp">
      <ui:msg description="Project Resource Permission Alert text">There are currently no permissions granted to any
        user or group in this project.
      </ui:msg>
    </b:Paragraph>

    <b:FluidRow ui:field="permissionsRow" visible="false">
      <b:Column size="3">
        <b:NavList ui:field="users">
          <b:NavHeader>
            <ui:msg description="Project Resource Permission Users label">Users</ui:msg>
          </b:NavHeader>
        </b:NavList>
        <b:NavList ui:field="groups">
          <b:NavHeader>
            <ui:msg description="Project Resource Permission Users label">Groups</ui:msg>
          </b:NavHeader>
        </b:NavList>
      </b:Column>
      <b:Column size="9">
        <b:ControlGroup>
          <b:Controls>
            <b:FluidRow addStyleNames="no-bottom-margin">
              <b:Column size="3">
                <b:Heading size="3" ui:field="principal" addStyleNames="no-top-margin"/>
              </b:Column>
              <b:Column size="9">
                <b:Button icon="TRASH" ui:field="deleteAll" addStyleNames="pull-right small-top-margin">
                  <ui:msg description="Delete all permissions label">Delete all permissions</ui:msg>
                </b:Button>
                <o:OpalSimplePager ui:field="tablePager" location="RIGHT" addStyleNames="pull-right"/>
              </b:Column>
            </b:FluidRow>
          </b:Controls>
        </b:ControlGroup>
        <o:Table ui:field="permissionsTable"/>
      </b:Column>
    </b:FluidRow>

  </g:FlowPanel>

</ui:UiBinder>