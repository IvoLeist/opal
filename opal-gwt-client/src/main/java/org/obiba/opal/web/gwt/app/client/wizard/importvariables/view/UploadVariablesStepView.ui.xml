<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui" 
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <o:WorkbenchLayout>
    <g:Label><ui:msg description="Import Variables title">Import Variables</ui:msg></g:Label>
    <g:Label><ui:msg description="Upload Variables Step summary">Select the variables file to use for creating or updating tables</ui:msg></g:Label>
    <g:Button ui:field="nextButton"><ui:msg description="Next button label">Next</ui:msg></g:Button>
    
    <g:FlowPanel>
      <g:HTMLPanel>
        <table class="gwt-KeyValue" cellspacing="10">
          <tbody>
            <tr>
              <td style="vertical-align:top">
                <ui:msg description="Variables File label">Variables File</ui:msg>:                
              </td>
              <td>
                <g:FormPanel ui:field="fileUploadForm" encoding="multipart/form-data" method="POST">
                  <g:FileUpload ui:field="fileToUpload" name="fileToUpload" />
                </g:FormPanel>
              </td>
            </tr>
          </tbody>
        </table>
      </g:HTMLPanel>
    </g:FlowPanel>
    
     <g:FlowPanel>
        <g:HTMLPanel>
          <g:Label addStyleNames="title"><ui:msg description="Variables File label">Variables File</ui:msg></g:Label>
          <p><ui:msg description="Supported variables file format information">The following file format is supported for describing the variables:</ui:msg></p>
          <p><g:Button ui:field="downloadExcelTemplateButton"><ui:msg description="Download Opal Variables Template button label">Download Opal Variables Template</ui:msg></g:Button></p>
          <p>
            <ui:msg description="Opal Variables Template note">Note: Certain defaults apply, as follows:</ui:msg>
              <ul>
                <li><ui:msg description="Default table name">The default table name is <b>Table</b>.</ui:msg></li>
                <li><ui:msg description="Default value type">The default value type is <b>text</b>.</ui:msg></li>
                <li><ui:msg description="Default entity type">The default entity type is <b>Participant</b>.</ui:msg></li>
              </ul>
            <ui:msg description="Opal Variables Template help">For complete details, refer to the "Help" sheet in the template.</ui:msg>
          </p>
        </g:HTMLPanel>
     </g:FlowPanel>      
  </o:WorkbenchLayout>

</ui:UiBinder>