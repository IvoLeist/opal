<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:g2="urn:import:com.google.gwt.user.cellview.client"
             xmlns:chzn="urn:import:com.watopi.chosen.client.gwt"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

  <ui:style>
    .tab { min-height: 30em; }
  </ui:style>

  <g:FlowPanel addStyleNames="{style.tab}">
    <g:Label addStyleNames="inline">
      <ui:msg description="Select tables to be viewed label">Select the tables which data will be viewed:</ui:msg>
    </g:Label>
    <g:Button ui:field="saveChangesButton" styleName="btn right-aligned">
      <ui:msg description="Save changes button label">Save Changes</ui:msg>
    </g:Button>
    <g:FlowPanel>
      <chzn:ChosenListBox ui:field="tableChosen"/>
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>
