<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">
  
  <ui:style>
    .full-border { border: 1px solid; }
    .top-border { border-top: 1px solid; }
    .inline { display: inline; }
    .left-aligned { float: left; }
    .right-aligned { float: right; }
    .top-margin { margin-top: 1em; }
    .bottom-margin { margin-bottom: 1em; }
    .name-input { width: 90%; }
  </ui:style>
  
  <g:DockLayoutPanel unit="EM">
    <g:center>
      <g:HTML ui:field="message">Confirmation message.</g:HTML>
    </g:center>
    <g:south size="5">
      <g:HTMLPanel addStyleNames="{style.top-border} {style.top-margin}">
        <span class="{style.right-aligned} {style.top-margin}">
          <g:Button ui:field="yesButton">
            <ui:msg description="Yes label">Yes</ui:msg>
          </g:Button>
          <g:Button ui:field="noButton">
            <ui:msg description="No label">No</ui:msg>
          </g:Button>
        </span>
      </g:HTMLPanel>
    </g:south> 
  </g:DockLayoutPanel>
  
</ui:UiBinder>