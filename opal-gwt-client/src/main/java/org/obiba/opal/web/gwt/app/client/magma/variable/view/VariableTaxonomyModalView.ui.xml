<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <o:Modal ui:field="modal" closeVisible="true" keyboard="true" animation="false">

    <b:Paragraph ui:field="editAttributeHelp"/>

    <b:ControlGroup ui:field="taxonomyGroup">
      <b:ControlLabel>
        <ui:msg description="Taxonomy label">Taxonomy</ui:msg>
      </b:ControlLabel>
      <b:Controls>
        <o:Chooser ui:field="taxonomyChooser"/>
      </b:Controls>
      <b:HelpBlock>
        <ui:msg description="Attribute Taxonomy help">A taxonomy.</ui:msg>
      </b:HelpBlock>
    </b:ControlGroup>

    <b:ControlGroup ui:field="vocabularyGroup">
      <b:ControlLabel>
        <ui:msg description="Vocabulary label">Vocabulary</ui:msg>
      </b:ControlLabel>
      <b:Controls>
        <o:Chooser ui:field="vocabularyChooser"/>
      </b:Controls>
      <b:HelpBlock>
        <ui:msg description="Attribute Vocabulary help">A vocabulary.</ui:msg>
      </b:HelpBlock>
    </b:ControlGroup>

    <b:ControlGroup ui:field="termGroup">
      <b:ControlLabel>
        <ui:msg description="Term label">Term</ui:msg>
      </b:ControlLabel>
      <b:Controls>
        <o:Chooser ui:field="termChooser"/>
      </b:Controls>
      <b:HelpBlock>
        <ui:msg description="Attribute Term help">A term.</ui:msg>
      </b:HelpBlock>
    </b:ControlGroup>

    <b:ControlGroup ui:field="valuesGroup" visible="false">
      <b:ControlLabel for="value">
        <ui:msg description="Value label">Values</ui:msg>
      </b:ControlLabel>
      <b:Controls>
        <o:LocalizedEditor ui:field="editor" type="MARKDOWN"/>
      </b:Controls>
      <b:HelpBlock>
        <ui:msg description="Attribute Values help">Values can be expressed in different languages (at least one value
          is required).
        </ui:msg>
      </b:HelpBlock>
    </b:ControlGroup>

    <b:ModalFooter>
      <b:Button ui:field="saveButton" type="PRIMARY">
        <ui:msg description="Save button label">Save</ui:msg>
      </b:Button>
      <b:Button ui:field="cancelButton">
        <ui:msg description="Cancel button label">Cancel</ui:msg>
      </b:Button>
    </b:ModalFooter>

  </o:Modal>

</ui:UiBinder>