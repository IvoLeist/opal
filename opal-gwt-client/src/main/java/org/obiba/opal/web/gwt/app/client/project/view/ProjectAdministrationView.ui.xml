<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <o:NavPillsPanel>
    <b:NavLink active="true">Settings</b:NavLink>
    <g:FlowPanel>
      <b:FluidRow>
        <b:Column size="6">
          <b:WellNavList>
            <b:NavHeader>
              <ui:msg description="Project Identification label">Project identification</ui:msg>
            </b:NavHeader>
            <b:Divider/>
            <b:Form>
              <b:ControlGroup>
                <b:ControlLabel for="name">Name</b:ControlLabel>
                <b:Controls>
                  <b:TextBox ui:field="name" alternateSize="XLARGE" b:id="name" enabled="false"/>
                  <b:HelpBlock>The project name is unique.
                  </b:HelpBlock>
                </b:Controls>
              </b:ControlGroup>
              <b:ControlGroup>
                <b:ControlLabel for="title">Title</b:ControlLabel>
                <b:Controls>
                  <b:TextBox ui:field="title" alternateSize="XLARGE" b:id="title"/>
                  <b:HelpBlock>The project title (name for human beings).
                  </b:HelpBlock>
                </b:Controls>
              </b:ControlGroup>
              <b:ControlGroup>
                <b:ControlLabel for="description">Description</b:ControlLabel>
                <b:Controls>
                  <b:TextArea ui:field="description" alternateSize="XLARGE" b:id="description"
                      visibleLines="3"/>
                </b:Controls>
              </b:ControlGroup>
              <b:ControlGroup>
                <b:ControlLabel for="tags">Tags</b:ControlLabel>
                <b:Controls>
                  <b:TextBox ui:field="tags" alternateSize="XLARGE" b:id="tags"/>
                  <b:HelpBlock>Tags that describe this project.
                  </b:HelpBlock>
                </b:Controls>
              </b:ControlGroup>
              <b:Button type="PRIMARY" ui:field="saveIdentification">Save</b:Button>
            </b:Form>
          </b:WellNavList>
        </b:Column>
        <b:Column size="6">
          <b:WellNavList>
            <b:NavHeader>
              <ui:msg description="Data Storage label">Data storage</ui:msg>
            </b:NavHeader>
            <b:Divider/>
            <b:Paragraph>
              The type of storage can only be changed if there are no tables.
            </b:Paragraph>
            <o:EditorPanel ui:field="storageEditor">
              <g:FlowPanel>
                <b:Paragraph>
                  Current type of storage:
                </b:Paragraph>
                <b:Paragraph addStyleNames="indent" ui:field="database">
                </b:Paragraph>
                <b:Paragraph>
                  This type of storage has the following properties: ...
                </b:Paragraph>
              </g:FlowPanel>
              <b:Form>
                <b:ControlGroup>
                  <b:ControlLabel for="databases">Type</b:ControlLabel>
                  <b:Controls>
                    <o:Chooser ui:field="databases" name="databases"/>
                    <b:HelpBlock>For more information see ....
                    </b:HelpBlock>
                  </b:Controls>
                </b:ControlGroup>
              </b:Form>
            </o:EditorPanel>
          </b:WellNavList>
          <b:WellNavList>
            <b:NavHeader>
              <ui:msg description="Danger Zone label">Danger zone</ui:msg>
            </b:NavHeader>
            <b:Divider/>
            <b:Form>
              <b:Paragraph>
                Deleting a project destroy all associated data and files. It can be a long running task and there is no
                going back.
              </b:Paragraph>
              <b:Button type="DANGER" ui:field="deleteProject">Delete Project</b:Button>
            </b:Form>
          </b:WellNavList>
        </b:Column>
      </b:FluidRow>
    </g:FlowPanel>
    <b:NavLink>Organizations</b:NavLink>
    <g:FlowPanel/>
  </o:NavPillsPanel>

</ui:UiBinder>