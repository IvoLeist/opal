<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator">

  <g:FlowPanel>
    <b:Alert ui:field="previewSummary" close="false" visible="true">
      <g:Grid>
        <g:row>
          <g:customCell>
            <g:Label ui:field="previewSummaryText" addStyleNames="inline"/>
          </g:customCell>
          <g:customCell>
            <b:InputAddOn>
              <o:NumericTextBox ui:field="limitTextBox" addStyleNames="inline xsmall-indent"
                  visible="true"/>
            </b:InputAddOn>
          </g:customCell>
          <g:customCell>
            <g:Label ui:field="previewSummaryTextSuffix" addStyleNames="inline"/>
          </g:customCell>
          <g:customCell>
            <g:FlowPanel addStyleNames="indent" ui:field="refreshPanel">
              <b:Icon type="REFRESH"/>
              <g:Anchor ui:field="refreshSummaryLink" addStyleNames="inline xsmall-indent" visible="true">
                <ui:msg description="Refresh summary label">Refresh</ui:msg>
              </g:Anchor>
            </g:FlowPanel>
          </g:customCell>
          <g:customCell>
            <g:FlowPanel addStyleNames="indent" ui:field="fullPanel">
              <b:Icon type="BAR_CHART"/>
              <g:Anchor ui:field="fullSummaryLink" addStyleNames="inline xsmall-indent" visible="true">
                <ui:msg description="Full Summary label">Full Summary</ui:msg>
              </g:Anchor>
            </g:FlowPanel>
          </g:customCell>
          <g:customCell>
            <g:FlowPanel addStyleNames="indent" ui:field="cancelPanel">
              <b:Icon type="STOP"/>
              <g:Anchor ui:field="cancelSummaryLink" addStyleNames="inline xsmall-indent" visible="true">
                <ui:msg description="Cancel Pending Summary label">Cancel</ui:msg>
              </g:Anchor>
            </g:FlowPanel>
          </g:customCell>
        </g:row>
      </g:Grid>
    </b:Alert>
    <g:SimplePanel ui:field="summary" width="100%"/>
  </g:FlowPanel>
</ui:UiBinder>