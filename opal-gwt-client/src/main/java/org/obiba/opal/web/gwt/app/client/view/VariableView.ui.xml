<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .separator { border-bottom: 2px solid black; }
    .left-aligned { float : left; margin-right : 0.5em }
    .title-bold { font-weight: bold; font-size: medium; }
    .title { font-size: small; }
    .title-light { color: gray; font-size: small; }
    .toolbar img {
      margin-left: 5px;
    }
    .toolbar img:hover {
      cursor: pointer;
    }
  </ui:style>

  <g:LayoutPanel>
    <g:layer top="0.5em" left="1em" height="2em" width="100%">
      <g:FlowPanel>
        <g:Label ui:field="variableName" addStyleNames="{style.left-aligned},{style.title-bold}">Variable Name</g:Label>
        <g:Label addStyleNames="{style.left-aligned},{style.title}">(Variable)</g:Label>
      </g:FlowPanel>     
    </g:layer>
    <g:layer top="2.9em" left="1em" height="2em" width="50%">
        <g:Hyperlink ui:field="parentLink">..</g:Hyperlink>
    </g:layer>
    <g:layer top='2.5em' right="1em" width='50%' height='2em'>
      <g:FlowPanel ui:field="toolbarPanel"  addStyleNames="{style.toolbar}"/>
    </g:layer>
    <g:layer top="4.7em" height="0.5em" left="1em" right="1em">
      <g:HTMLPanel>
        <div class="{style.separator}" />
      </g:HTMLPanel>
    </g:layer>
    <g:layer top="6em" height="6em" left="1em" width="47%">
      <g:VerticalPanel>
        <g:FlowPanel>
          <g:Label addStyleNames="{style.left-aligned},{style.title-light}"><ui:msg description="Entity type label">Entity Type</ui:msg></g:Label><g:Label addStyleNames="{style.left-aligned},{style.title-light}">:</g:Label><g:Label addStyleNames="{style.left-aligned},{style.title}" ui:field="entityType">Entity Name</g:Label>
        </g:FlowPanel>
        <g:FlowPanel>
          <g:Label addStyleNames="{style.left-aligned},{style.title-light}"><ui:msg description="Variable Explorer column title">Value Type</ui:msg></g:Label><g:Label addStyleNames="{style.left-aligned},{style.title-light}">:</g:Label><g:Label addStyleNames="{style.left-aligned},{style.title}" ui:field="valueType">Value Type Name</g:Label>
        </g:FlowPanel>            
        <g:FlowPanel>
          <g:Label addStyleNames="{style.left-aligned},{style.title-light}"><ui:msg description="Mime Type label">Mime Type</ui:msg></g:Label><g:Label addStyleNames="{style.left-aligned},{style.title-light}">:</g:Label><g:Label addStyleNames="{style.left-aligned},{style.title}" ui:field="mimeType">Mime Type Name</g:Label>
        </g:FlowPanel>
      </g:VerticalPanel>     
    </g:layer>     
    <g:layer top="6em" height="6em" left="50%" width="50%">
      <g:VerticalPanel>
        <g:FlowPanel>
          <g:Label addStyleNames="{style.left-aligned},{style.title-light}"><ui:msg description="Unit label">Unit</ui:msg></g:Label><g:Label addStyleNames="{style.left-aligned},{style.title-light}">:</g:Label><g:Label addStyleNames="{style.left-aligned},{style.title}" ui:field="unit">Unit Name</g:Label>
        </g:FlowPanel>
        <g:FlowPanel>
          <g:Label addStyleNames="{style.left-aligned},{style.title-light}"><ui:msg description="Repeatable label">Repeatable</ui:msg></g:Label><g:Label addStyleNames="{style.left-aligned},{style.title-light}">:</g:Label><g:Label addStyleNames="{style.left-aligned},{style.title}" ui:field="repeatable">Yes/No</g:Label>
        </g:FlowPanel>
        <g:FlowPanel>
          <g:Label addStyleNames="{style.left-aligned},{style.title-light}"><ui:msg description="Occurrence Group label">Occurrence Group</ui:msg></g:Label><g:Label addStyleNames="{style.left-aligned},{style.title-light}">:</g:Label><g:Label addStyleNames="{style.left-aligned},{style.title}" ui:field="occurrenceGroup">Occurrence Group Name</g:Label>
        </g:FlowPanel>
      </g:VerticalPanel>     
    </g:layer>
    <g:layer top="10em" height="30em" left="1em" width="97%">
      <g:TabLayoutPanel barHeight="2" barUnit="EM">
        <g:tab>
		  <g:customHeader>
		    <g:Label ui:field="categoryTableTitle" />
		  </g:customHeader>
		  <g:DockLayoutPanel>
	        <g:center>
	          <g:ScrollPanel width="100%" >
                <g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
	              <g2:CellTable width="100%" ui:field="categoryTable" />
	            </g:VerticalPanel>
	          </g:ScrollPanel>
	        </g:center>
	      </g:DockLayoutPanel>
	    </g:tab>
	    <g:tab>
		  <g:customHeader>
		    <g:Label ui:field="attributeTableTitle" />
		  </g:customHeader>
		  <g:DockLayoutPanel>
	        <g:center>
              <g:ScrollPanel width="100%" >
                <g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
	              <g2:CellTable width="97%" ui:field="attributeTable" />
	            </g:VerticalPanel>
	          </g:ScrollPanel>
	        </g:center>
	      </g:DockLayoutPanel>
	    </g:tab>
      </g:TabLayoutPanel>
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>