<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <b:FluidRow addStyleNames="page-header">
      <b:Column size="9">
        <b:Breadcrumbs ui:field="breadcrumbs"/>
      </b:Column>
      <b:Column size="3">
        <b:Button ui:field="addDatabaseButton" type="INFO" icon="PLUS" size="SMALL" addStyleNames="pull-right">
          <ui:msg description="Add SQL database label">Add SQL database</ui:msg>
        </b:Button>
      </b:Column>
    </b:FluidRow>
    <g:FlowPanel>
      <b:SimplePager ui:field="databaseTablePager" location="RIGHT"/>
      <o:Table ui:field="databaseTable" width="100%"/>
    </g:FlowPanel>
  </g:FlowPanel>

</ui:UiBinder>