<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client">

  <ui:style>
    .right-aligned { float: right; margin:10px; }
  </ui:style>
    
  <g:LayoutPanel>
    <g:layer top="0" height="27em">
      <g:ScrollPanel width="100%">
        <g2:CellTable width="100%" ui:field="table" />
      </g:ScrollPanel>
    </g:layer>
    <g:layer bottom="0" height="3em">
      <g:FlowPanel>
        <g:Button ui:field="close" addStyleNames="{style.right-aligned}"><ui:msg description="Close label">Close</ui:msg></g:Button>
      </g:FlowPanel>
    </g:layer>
  </g:LayoutPanel>
  
</ui:UiBinder>