<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client">

  <ui:style>
    .right-aligned { float: right; }
  </ui:style>
    
  <g:LayoutPanel>
    <g:layer top="0" height="28em">
      <g:ScrollPanel width="100%">
        <g2:CellTable width="100%" ui:field="table" />
      </g:ScrollPanel>
    </g:layer>
    <g:layer bottom="0" height="2em">
      <g:FlowPanel>
        <g:Button ui:field="close" addStyleNames="{style.right-aligned}">Close</g:Button>
      </g:FlowPanel>
    </g:layer>
  </g:LayoutPanel>
  
</ui:UiBinder>