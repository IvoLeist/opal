<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .wb-top {
    border-bottom:1px solid #BBBBBB;
    padding: 0.25em 0 0 1em;
    float: left;
    }
    
    .wb-head {
    float: left;
    margin-right:20px;
    }
    
    .wb-top .title {
    font-size: 1.3em;
    padding-top: 0.3em;
    }
    
    .wb-control {
    	padding-top: 0.25em;
    }
    
    .wb-control button {
    margin-left: 10px;
    }
           
  </ui:style>

  <g:DockLayoutPanel>
    <g:north size="40">
      <g:FlowPanel addStyleNames="{style.wb-top}">
        <g:FlowPanel addStyleNames="{style.wb-head}">
          <g:Label addStyleNames="{style.title}"><ui:msg description="Explorer">File Explorer</ui:msg></g:Label>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames="{style.wb-control}">
            <g:Button ui:field="createFolderButton">
              <ui:msg description="Create Folder label">Create Folder</ui:msg>
            </g:Button>          
            <g:Button ui:field="fileUploadButton">
              <ui:msg description="Upload File label">Upload</ui:msg>
            </g:Button>
            <g:Button ui:field="fileDownloadButton">
              <ui:msg description="Download File label">Download</ui:msg>
            </g:Button>
            <g:Button ui:field="fileDeleteButton">
              <ui:msg description="Delete File label">Delete</ui:msg>
            </g:Button>
          </g:FlowPanel>
        </g:FlowPanel>
      
   </g:north>       
      
    <g:center>
      <g:SplitLayoutPanel>
        <g:west size="200">
          <g:ScrollPanel ui:field="fileSystemTreePanel">
          </g:ScrollPanel>
        </g:west>
        <g:center>
          <g:ScrollPanel ui:field="folderDetailsPanel">
          </g:ScrollPanel>
        </g:center>
      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>

</ui:UiBinder>