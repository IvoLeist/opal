<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .title {
    font-size: 1.5em;
    margin: 0.25em 0 0 0.5em;
    }

    .topPanel {
    border-bottom-style:solid;
    border-bottom-width:0.2em;
    border-bottom-color:black;
    }

    .actionButton {
    font-size: 1em;
    margin: 0.5em 0.5em 0.5em 0.5em;
    }

    .treePanel {
    margin: 1.25em 0 0 0.5em;
    }    
  </ui:style>

  <g:DockLayoutPanel>
    <g:north size="40">
      <g:DockLayoutPanel addStyleNames="{style.topPanel}">
        <g:center>
          <g:Label addStyleNames="{style.title}">
            <ui:msg description="File Explorer label">File Explorer</ui:msg>
          </g:Label>
        </g:center>
        <g:east size="75" horizontalAlignment="ALIGN_RIGHT">
          <g:Button addStyleNames="{style.actionButton}" ui:field="fileUploadButton">
            <ui:msg description="Upload File label">Upload</ui:msg>
          </g:Button>
        </g:east>
      </g:DockLayoutPanel>
    </g:north>
    <g:center>
      <g:SplitLayoutPanel>
        <g:west size="200">
          <g:ScrollPanel ui:field="fileSystemTreePanel" addStyleNames="{style.treePanel}">
          </g:ScrollPanel>
        </g:west>
        <g:center>
          <g:ScrollPanel ui:field="folderDetailsPanel">
          </g:ScrollPanel>
        </g:center>
      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>

</ui:UiBinder>