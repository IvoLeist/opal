<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:g2="urn:import:com.google.gwt.user.cellview.client">

  <g:FlowPanel >
    <g:Label addStyleNames="inline"><ui:msg description="Select entities to be viewed label">Select the entities that will be viewed:</ui:msg></g:Label>
    <g:ListBox ui:field="entitiesToView" addStyleNames="small-indent">
      <g:item value="script"><ui:msg description="Script label">script</ui:msg></g:item>
      <g:item value="all"><ui:msg description="All label">all</ui:msg></g:item>
    </g:ListBox>
    <g:Button ui:field="saveChangesButton" addStyleNames="right-aligned">
      <ui:msg description="Save changes button label">Save Changes</ui:msg>
    </g:Button>
    <g:SimplePanel ui:field="scriptWidgetPanel" />
  </g:FlowPanel>
</ui:UiBinder>
