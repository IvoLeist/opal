<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <o:WizardDialogBox autoHide="false" modal="true" height="50em" width="60em">
    <g:caption>
      <ui:msg description="Derive Variable title">Derive Variable</ui:msg>
    </g:caption>
    <g:FlowPanel ui:field="stepsFlow">
      
      <o:WizardStep ui:field="summaryStep">
      
        <o:HorizontalTabLayout ui:field="tabs" addStyleNames="small-indent top-margin not-so-full-width">
             
	      <g:Anchor><ui:msg description="Derived Summary tab title">Summary</ui:msg></g:Anchor>
          <g:SimplePanel ui:field="summary" width="100%" />
        
          <g:Anchor><ui:msg description="Derived Values tab title" >Values</ui:msg></g:Anchor>
          <g:FlowPanel>
            <g:FlowPanel addStyleNames="paging">
              <g:Anchor ui:field="previousPage"><img src="image/16/previous.png" align="top"/></g:Anchor>
		      <g:InlineLabel ui:field="pageLow">1</g:InlineLabel>
		      <g:InlineLabel> ... </g:InlineLabel>
		      <g:InlineLabel ui:field="pageHigh">10</g:InlineLabel>
		      <g:Anchor ui:field="nextPage"><img src="image/16/next.png" align="top"/></g:Anchor>
		    </g:FlowPanel>
            <o:Table width="100%" ui:field="valuesTable" />
          </g:FlowPanel>
         
        </o:HorizontalTabLayout>
      
      </o:WizardStep>
      <o:WizardStep ui:field="conclusionStep">
        <g:FlowPanel>
          <g:FlowPanel styleName="input">
            <g:Label addStyleNames="key"><ui:msg description="Derived Variable Name label">Derived Variable Name</ui:msg></g:Label>
            <g:TextBox ui:field="derivedNameBox"/>
          </g:FlowPanel>
          
          <g:FlowPanel styleName="input">
            <g:Label addStyleNames="key"><ui:msg description="Name label">Datasource</ui:msg></g:Label>
            <g:ListBox ui:field="datasourceNameBox"></g:ListBox>
          </g:FlowPanel>
          
          <g:FlowPanel styleName="input">
            <g:Label addStyleNames="key"><ui:msg description="Destination View Name label">Destination View Name</ui:msg></g:Label>
            <g:SuggestBox ui:field="viewNameBox"/>
            <g:Label styleName="help-block">Select an existing view or provide a name for a new view</g:Label>
          </g:FlowPanel>
          
          <g:FlowPanel styleName="input">
            <g:CheckBox value="true" ui:field="openEditor"><ui:msg description="Open New Derived Variable Editor label">Open editor for this new derived variable</ui:msg></g:CheckBox>
          </g:FlowPanel>
        </g:FlowPanel>
      </o:WizardStep>
    </g:FlowPanel>
    
  </o:WizardDialogBox>

</ui:UiBinder>