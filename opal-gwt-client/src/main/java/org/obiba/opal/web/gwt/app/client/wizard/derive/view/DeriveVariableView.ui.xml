<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <o:WizardDialogBox autoHide="false" modal="true" height="55em" width="60em">
    <g:caption>
      <ui:msg description="Derive Variable title">Derive Variable</ui:msg>
    </g:caption>
    <g:FlowPanel ui:field="stepsFlow">
      
      <o:WizardStep ui:field="scriptEvaluationStep"></o:WizardStep>
      <o:WizardStep ui:field="conclusionStep">
        <g:FlowPanel>
          <g:FlowPanel ui:field="derivedNameInput" styleName="input">
            <g:Label addStyleNames="key"><ui:msg description="Derived Variable Name label">Derived Variable Name</ui:msg></g:Label>
            <g:TextBox ui:field="derivedNameBox"/>
          </g:FlowPanel>
          
          <g:FlowPanel styleName="input">
            <g:Label addStyleNames="key"><ui:msg description="Datasource label">Datasource</ui:msg></g:Label>
            <g:ListBox ui:field="datasourceNameBox"></g:ListBox>
          </g:FlowPanel>
          
          <g:FlowPanel ui:field="viewNameInput" styleName="input">
            <g:Label addStyleNames="key"><ui:msg description="Destination View Name label">Destination View Name</ui:msg></g:Label>
            <o:DropdownSuggestBox ui:field="viewNameBox"/>
            <g:Label styleName="help-block"><ui:msg description="Destination View Name help label">Select an existing view or provide a name for a new view</ui:msg></g:Label>
          </g:FlowPanel>
          
          <g:FlowPanel styleName="input">
            <g:CheckBox value="true" ui:field="openEditor"><ui:msg description="Open New Derived Variable Editor label">Open editor for this new derived variable</ui:msg></g:CheckBox>
          </g:FlowPanel>
        </g:FlowPanel>
      </o:WizardStep>
    </g:FlowPanel>
    
  </o:WizardDialogBox>

</ui:UiBinder>