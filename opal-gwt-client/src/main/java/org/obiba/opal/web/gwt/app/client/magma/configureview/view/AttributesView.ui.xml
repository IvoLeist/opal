<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <g:Button ui:field="addAttributeButton" styleName="btn">Add New Attribute</g:Button>
    <c:SimplePager ui:field="attributeTablePager" location="CENTER" addStyleNames="right-aligned"/>
    <o:Table width="100%" ui:field="attributeTable" addStyleNames="left-aligned"/>
  </g:FlowPanel>

</ui:UiBinder>
