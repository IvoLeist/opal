<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui" 
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  
  <o:WorkbenchLayout>
    <g:Label><ui:msg description="Data import title">Import Data</ui:msg></g:Label>
    <g:Label><ui:msg description="Xml format summary">Enter additional information for the importation of data in the Opal XML format</ui:msg></g:Label>
    <g:Button ui:field="nextButton"><ui:msg description="Next button label">Next</ui:msg></g:Button>
    <g:FlowPanel>
      <g:HTMLPanel>
        <table class="gwt-KeyValue" cellspacing="10">
          <tbody>
            <tr>
              <td style="vertical-align:top">
                <ui:msg description="Select data file label">Select data file</ui:msg>
                <g:SimplePanel ui:field="selectXmlFilePanel" />          
              </td>
            </tr>
            <tr>
              <td style="vertical-align:top">
                <ui:msg description="Unit label">Unit</ui:msg>
                <g:ListBox ui:field="units" />
              </td>
            </tr>
          </tbody>
        </table>
      </g:HTMLPanel>
    </g:FlowPanel>
    
     <g:FlowPanel>
        <g:HTMLPanel>
          <g:Label addStyleNames="title"><ui:msg description="Data File label">Data File</ui:msg></g:Label>
          <p><ui:msg description="Xml data file information">The Opal XML file to use must be on the server. Use the file explorer to upload it if it's not already there.</ui:msg></p>    
        </g:HTMLPanel>
     </g:FlowPanel>    
    
  </o:WorkbenchLayout>
  
</ui:UiBinder>