<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:b2="urn:import:com.github.gwtbootstrap.client.ui.base"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel ui:field="valuesPanel">
    <g:InlineLabel ui:field="noValues">
      <ui:msg description="No Values label">No Values</ui:msg>
    </g:InlineLabel>
    <g:PopupPanel ui:field="navigationPopup" autoHideEnabled="true" styleName="gwt-MenuBarPopup"></g:PopupPanel>

    <g:FlowPanel ui:field="searchPanel">
      <b:ControlGroup>
        <b:InputAddOn prependIcon="SEARCH" addStyleNames="inline-block">
          <b:TextBox ui:field="searchBox" placeholder="search for an identifier..."/>
        </b:InputAddOn>
      </b:ControlGroup>

      <b:ControlGroup>
        <b:ControlLabel>
          <ui:msg description="Values Filter label">Values Filter</ui:msg>
        </b:ControlLabel>
        <b:Controls>
          <b:DropdownButton text="VAR1: All">
            <b2:ListItem addStyleNames="controls">
              <b:RadioButton name="radio" checked="true">All</b:RadioButton>
              <b:RadioButton name="radio">Empty</b:RadioButton>
              <b:RadioButton name="radio">Not empty</b:RadioButton>
            </b2:ListItem>
            <b:Divider/>
            <b2:ListItem addStyleNames="controls">
              <g:SimplePanel>
                <o:Chooser>
                  <g:item value="IN">
                    <ui:msg description="In label">In</ui:msg>
                  </g:item>
                  <g:item value="NOT_IN">
                    <ui:msg description="Not in label">Not in</ui:msg>
                  </g:item>
                </o:Chooser>
              </g:SimplePanel>
              <o:Chooser multipleSelect="true">
                <g:item value="C1">C1 (234)</g:item>
                <g:item value="C2">C2 (22)</g:item>
                <g:item value="C3">C3 (123)</g:item>
              </o:Chooser>
            </b2:ListItem>
            <b:Divider/>
            <b:NavLink icon="REMOVE">Remove</b:NavLink>
          </b:DropdownButton>
          <b:Typeahead ui:field="variableTypeahead">
            <b:TextBox placeholder="more variable criteria..."/>
          </b:Typeahead>
        </b:Controls>
        <b:HelpBlock>
          <ui:msg description="Values Filter help">Select variables and apply value filter on each of them.</ui:msg>
        </b:HelpBlock>
      </b:ControlGroup>

      <b:SimplePager ui:field="pager" location="RIGHT" addStyleNames="pull-right"></b:SimplePager>
    </g:FlowPanel>

    <o:CollapsiblePanel ui:field="addPanel">
      <g:Image ui:field="refreshPending" url="image/loading.gif" addStyleNames="small-indent"/>
      <g:Grid>
        <g:row>
          <g:customCell>
            <g:FlowPanel>
              <g:Label>
                <ui:msg description="Filter Variables label">Variables filter</ui:msg>
              </g:Label>
              <g:HorizontalPanel>
                <b:Controls>
                  <b:InputAddOn prependIcon="FILTER">
                    <o:TextBoxClearable ui:field="filter"></o:TextBoxClearable>
                  </b:InputAddOn>
                </b:Controls>
              </g:HorizontalPanel>
            </g:FlowPanel>
          </g:customCell>
          <g:customCell styleName="small-indent">
            <g:FlowPanel>
              <g:Label>
                <ui:msg description="Number of Visible Variables label">Number of visible variables</ui:msg>
              </g:Label>
              <o:NumericTextBox ui:field="visibleColumns" addStyleNames="span1"></o:NumericTextBox>
            </g:FlowPanel>
          </g:customCell>
          <g:customCell styleName="small-indent">
            <g:FlowPanel>
              <g:Label>
                <ui:msg description="Number of Rows label">Number of rows</ui:msg>
              </g:Label>
              <o:NumericTextBox ui:field="pageSize" addStyleNames="span1"></o:NumericTextBox>
            </g:FlowPanel>
          </g:customCell>
        </g:row>
      </g:Grid>
    </o:CollapsiblePanel>

    <o:Table ui:field="valuesTable"></o:Table>
  </g:FlowPanel>

</ui:UiBinder>
