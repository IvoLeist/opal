<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client"
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <ui:style>
    .title { font-size: small; }
    .title-light { color: gray; font-size: small; }
  </ui:style>

  <g:VerticalPanel width="100%" addStyleNames="navigator">
     <g:FlowPanel addStyleNames="titlebar">
       <g:Label addStyleNames="title" ui:field="tableName">Table Name</g:Label>
       <g:Label addStyleNames="small-indent" ui:field="tableOrView">(View)</g:Label>
     </g:FlowPanel>
      
     <g:FlowPanel ui:field="toolbarPanel" addStyleNames="toolbar toolbar-left"/>
     
     <g:HorizontalPanel addStyleNames="small-indent">
       <g:Label addStyleNames="{style.title-light}"><ui:msg description="Entity type label">Entity Type</ui:msg>:</g:Label>
       <g:Label addStyleNames="small-indent {style.title}" ui:field="entityType">Entity Name</g:Label>
     </g:HorizontalPanel>
     
     <o:HorizontalTabLayout addStyleNames="small-indent top-margin not-so-full-width">
	  <g:Anchor><ui:msg description="Variables label">Variables</ui:msg></g:Anchor>
      <g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
        <g:InlineLabel ui:field="noVariables"><ui:msg description="No Variables label">No Variables</ui:msg></g:InlineLabel>
        <g2:CellTable ui:field="table" width="100%" addStyleNames="left-aligned gwt-CellTable tableList"/>
        <g:Image ui:field="loading" url="image/loading.gif" addStyleNames="loading"/>
      </g:VerticalPanel>
     </o:HorizontalTabLayout>
     
  </g:VerticalPanel>

</ui:UiBinder>