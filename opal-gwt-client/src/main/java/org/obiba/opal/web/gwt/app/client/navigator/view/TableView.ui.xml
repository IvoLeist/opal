<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <g:FlowPanel width="100%" addStyleNames="navigator">
     <g:FlowPanel addStyleNames="titlebar">
       <g:Label addStyleNames="title" ui:field="tableName">Table Name</g:Label>
       <g:Label addStyleNames="small-indent" ui:field="tableOrView">(View)</g:Label>
     </g:FlowPanel>
      
     <g:FlowPanel ui:field="toolbarPanel" addStyleNames="toolbar toolbar-left">
       <g:SuggestBox ui:field="variableNameSuggestBox" addStyleNames="right-aligned ui-corner-all"/>
     </g:FlowPanel>
     
     <g:HTMLPanel>
      <table class="item-properties small-indent">
        <tr>
          <td>
            <g:Label addStyleNames="key">
              <ui:msg description="Entity type label">Entity Type</ui:msg>:
            </g:Label>
          </td>
          <td>
            <g:Label ui:field="entityType"/>
          </td>
        </tr>
      </table>
    </g:HTMLPanel>
    
    <g:HTMLPanel>
      <table class="item-properties small-indent small-top-margin">
        <tr>
          <td>
            <g:Label addStyleNames="key">
              <ui:msg description="Current Entity Count label">Current Number of Entity</ui:msg>:
            </g:Label>
          </td>
          <td>
            <g:Label ui:field="entityCount"/>
          </td>
        </tr>
      </table>
    </g:HTMLPanel>
     
     <o:HorizontalTabLayout ui:field="tabs" addStyleNames="small-dual-indent top-margin">
	  <g:Anchor><ui:msg description="Variables label">Variables</ui:msg></g:Anchor>
      <g:FlowPanel>
        <g:InlineLabel ui:field="noVariables"><ui:msg description="No Variables label">No Variables</ui:msg></g:InlineLabel>
        <c:SimplePager ui:field="pager" location="CENTER" addStyleNames="right-aligned" />
        <o:Table ui:field="table" width="100%" addStyleNames="left-aligned"/>
      </g:FlowPanel>
      
      <g:Anchor><ui:msg description="Permissions label" >Permissions</ui:msg></g:Anchor>
      <g:SimplePanel ui:field="permissions"></g:SimplePanel>
      
     </o:HorizontalTabLayout>
     
  </g:FlowPanel>

</ui:UiBinder>