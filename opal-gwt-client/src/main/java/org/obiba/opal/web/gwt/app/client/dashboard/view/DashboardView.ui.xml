<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <g:FlowPanel ui:field="header">
      <b:PageHeader ui:field="pageTitle"/>
    </g:FlowPanel>

    <b:FluidRow>
      <b:Column size="3" ui:field="datasources">
        <g:Image url="image/48/table.png" addStyleNames="inline-block"></g:Image>
        <b:NavLink ui:field="exploreVariablesLink">
          <ui:msg description="Explore variables link label">Explore Variables</ui:msg>
        </b:NavLink>
        <g:Label addStyleNames="help-block">
          <ui:msg description="Explore variables link description">browse tables and variables, create views,
            import/export data and dictionaries.
          </ui:msg>
        </g:Label>
      </b:Column>

      <b:Column size="3" ui:field="identifiers">
        <g:Image url="image/48/units.png" addStyleNames="inline-block"></g:Image>
        <b:NavLink ui:field="identifiersLink">
          <ui:msg description="Units link label">Manage Participant Identifiers</ui:msg>
        </b:NavLink>
        <g:Label addStyleNames="help-block">
          <ui:msg description="Units link description">create and map identifiers of participants in different units,
            manage encryption keys.
          </ui:msg>
        </g:Label>
      </b:Column>

      <b:Column size="3" ui:field="reports">
        <g:Image url="image/48/report.png" addStyleNames="inline-block"></g:Image>
        <b:NavLink ui:field="reportsLink">
          <ui:msg description="Reports link label">Run Reports</ui:msg>
        </b:NavLink>
        <g:Label addStyleNames="help-block">
          <ui:msg description="Reports link description">design reports with BIRT over Opal data and schedule their
            execution.
          </ui:msg>
        </g:Label>
      </b:Column>

      <b:Column size="3" ui:field="files">
        <g:Image url="image/48/folder.png" addStyleNames="inline-block"></g:Image>
        <b:NavLink ui:field="exploreFilesLink">
          <ui:msg description="Manage Files link label">Manage Files</ui:msg>
        </b:NavLink>
        <g:Label addStyleNames="help-block">
          <ui:msg description="Manage Files link description">browse, upload and download files on the server.
          </ui:msg>
        </g:Label>
      </b:Column>
    </b:FluidRow>

  </g:FlowPanel>
</ui:UiBinder>