<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui" 
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <o:WorkbenchLayout withInfo="false">
    <g:Label><ui:msg description="Dashboard title" >Study Dashboard</ui:msg></g:Label>
    <g:Label></g:Label>
    <g:FlowPanel></g:FlowPanel>
  <g:HTMLPanel addStyleNames="dashboard">
    <div>
      <g:Label>
        <ui:msg description="Participant count label">Number of Participants:</ui:msg>
      </g:Label>
      <g:Label addStyleNames="count" ui:field="participantCount" />
    </div>
    <div>
        <ui:msg description="What to do now label">What to do now:</ui:msg>
    </div>
    <div id="shortcuts" class="large-indent">
	    <table>
	      <tr>
	        <td valign="top"><g:Anchor ui:field="exploreVariablesLink"><img src="image/48/table.png" align="middle"/><ui:msg description="Explore variables link label">Explore Variables</ui:msg></g:Anchor>:</td>
	        <td>
		      <ul>
		        <li><ui:msg description="Explore variables link description">browse tables and variables.</ui:msg></li>
		        <li><ui:msg description="Import data link description">create a job to import data from a file in various formats.</ui:msg></li>
		        <li><ui:msg description="Export data link description">create a job to export data to various destinations (files, databases, etc).</ui:msg></li>
		      </ul>  
	        </td>
	      </tr>
	    </table>
	    <div>
	      <g:Anchor ui:field="exploreFilesLink"><img src="image/48/folder.png" align="middle"/><ui:msg description="Manage Files link label">Manage Files</ui:msg></g:Anchor>:
	      <ui:msg description="Manage Files link description">browse, upload and download files on the server.</ui:msg>
	    </div>
	    <div>
	      <g:Anchor ui:field="jobsLink"><img src="image/48/job.png" align="middle"/><ui:msg description="Manage Jobs link label">Manage Jobs</ui:msg></g:Anchor>:
	      <ui:msg description="Manage Jobs link description">list and manage jobs that were launched on the server.</ui:msg>
	    </div>
    </div>
  </g:HTMLPanel> 
  </o:WorkbenchLayout>
</ui:UiBinder>