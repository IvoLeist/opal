<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .inline { display: inline; }
    .right-aligned { float: right; }
    .top-margin { margin: 0.5em; }
  </ui:style>

  <g:PopupPanel ui:field="dialog" autoHideEnabled="true" modal="true" animationEnabled="true" addStyleNames="notification">
    <g:DockLayoutPanel unit="PX" height="80px" width="300px">
      <g:north size="20">
        <g:HTMLPanel addStyleNames="header {style.top-margin}">
          <g:Label ui:field="caption" addStyleNames="{style.inline}"><ui:msg description="Error dialog title">Errors</ui:msg></g:Label>
          <span class="{style.right-aligned}">
            <g:Anchor ui:field="okay">x</g:Anchor>
          </span>
        </g:HTMLPanel>
      </g:north>
      <g:center>
        <g:ScrollPanel>
          <g:VerticalPanel width="100%" ui:field="messagePanel" addStyleNames="main"/>
        </g:ScrollPanel>
      </g:center>
       
    </g:DockLayoutPanel> 
  </g:PopupPanel>

</ui:UiBinder>