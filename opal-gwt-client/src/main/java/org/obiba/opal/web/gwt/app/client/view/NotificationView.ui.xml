<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <ui:style>
    .resizable-s {
      font-size: 12px;
      text-align: center;
    }
  </ui:style>

  <g:PopupPanel ui:field="dialog" autoHideEnabled="true" modal="true" animationEnabled="false"
      addStyleNames="notification alert">
    <g:DockLayoutPanel ui:field="contentLayout" unit="PX" height="100px" width="300px">
      <g:north size="20">
        <g:HTMLPanel addStyleNames="header">
          <g:InlineLabel ui:field="caption">
            <ui:msg description="Error dialog title">Errors</ui:msg>
          </g:InlineLabel>
          <g:Anchor ui:field="okay" addStyleNames="close">x</g:Anchor>
        </g:HTMLPanel>
      </g:north>
      <g:center>
        <g:ScrollPanel>
          <g:VerticalPanel width="100%" ui:field="messagePanel" addStyleNames="main"/>
        </g:ScrollPanel>
      </g:center>
      <g:south size="9">
        <o:ResizeHandle ui:field="resizeHandleSouth" resizeDirection="SOUTH" addStyleNames="{style.resizable-s}">=
        </o:ResizeHandle>
      </g:south>
    </g:DockLayoutPanel>
  </g:PopupPanel>

</ui:UiBinder>