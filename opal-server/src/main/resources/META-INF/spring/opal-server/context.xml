<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <import resource="config.xml" />
  <import resource="classpath:spring/opal-core/context.xml" />

  <bean id="consoleCallbackHandler" class="org.obiba.opal.core.crypt.FixedPasswordCallbackHandler">
    <constructor-arg value="${org.obiba.opal.keystore.password}" />
  </bean>

  <context:component-scan base-package="org.obiba.opal.server,org.obiba.opal.core,org.obiba.opal.service,org.obiba.opal.shell,org.obiba.opal.web.shell,org.obiba.opal.reporting,org.obiba.opal.r" />

</beans>
