<assembly>
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/main/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>*.bat</include>
      </includes>
    </fileSet>

    <!-- Copy unix shell scripts. -->
    <fileSet>
      <directory>src/main/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0755</fileMode>
      <excludes>
        <exclude>*.bat</exclude>
      </excludes>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>src/main/conf</directory>
      <outputDirectory>conf</outputDirectory>
      <includes>
        <include>**/*.*</include>
      </includes>
    </fileSet>
	
    <fileSet>
      <directory>src/main/bootstrap</directory>
      <outputDirectory>bootstrap</outputDirectory>
	  <excludes>
	    <exclude>yajsw/bat/*.*</exclude>
	  </excludes>
      <includes>
        <include>**/*.*</include>
      </includes>
    </fileSet>
	
	<fileSet>
      <directory>src/main/bootstrap/yajsw/bat</directory>
      <outputDirectory>bootstrap/yajsw/bat</outputDirectory>
	  <fileMode>0755</fileMode>
      <includes>
        <include>**/*.*</include>
      </includes>
    </fileSet>
    
    <fileSet>
      <directory>../opal-reporting/lib/birt-runtime-2_6_1/ReportEngine</directory>
      <outputDirectory>ReportEngine</outputDirectory>
      <includes>
        <include>**/*.*</include>
      </includes>
    </fileSet>
    
  </fileSets>
  <dependencySets>
    <!-- Copy dependency jar files to 'lib' -->
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <excludes>
        <exclude>org.obiba.opal:opal-gwt-client:*</exclude>
      </excludes>      
      <scope>runtime</scope>
    </dependencySet>
    
    <dependencySet>
      <outputDirectory>webapp</outputDirectory>
      <includes>
        <include>org.obiba.opal:opal-gwt-client:war</include>
      </includes>      
      <scope>runtime</scope>
      <unpack>true</unpack>      
    </dependencySet>    
    
  </dependencySets>
</assembly>